<?xml version='1.0' encoding='utf-8' ?>
<LinearLayout android:gravity="center_vertical"
              android:orientation="horizontal"
              android:background="@drawable/qs_control_detail_item_bg"
              android:focusable="true"
              android:clickable="true"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:minHeight="@dimen/qs_detail_selectable_item_min_height"
              android:paddingStart="@dimen/qs_detail_item_padding_horizontal"
              android:paddingEnd="@dimen/qs_detail_item_padding_horizontal"
              android:layout_marginHorizontal="@dimen/qs_detail_selectable_item_margin_horizontal"
              android:layout_marginVertical="@dimen/qs_detail_selectable_item_margin_vertical" xmlns:android="http://schemas.android.com/apk/res/android">
  <ImageView android:id="@android:id/icon"
             android:layout_width="@dimen/qs_detail_item_icon_size"
             android:layout_height="@dimen/qs_detail_item_icon_size"
             android:tint="@color/qs_detail_item_icon_tint" />
  <LinearLayout android:orientation="vertical"
                android:layout_width="0.0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/qs_detail_item_text_margin_top"
                android:layout_marginBottom="@dimen/qs_detail_item_text_margin_bottom"
                android:layout_weight="1.0"
                android:layout_marginStart="@dimen/qs_detail_selectable_item_horizontal_space">
    <TextView android:textAppearance="@style/TextAppearance.QSControl.DetailItemPrimary"
              android:ellipsize="end"
              android:id="@android:id/title"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:singleLine="true"
              android:textDirection="locale" />
    <TextView android:textAppearance="@style/TextAppearance.QSControl.DetailItemSecondary"
              android:id="@android:id/summary"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="@dimen/qs_detail_item_secondary_text_margin_top"
              android:singleLine="true"
              android:textDirection="locale" />
    <com.android.systemui.util.SafeMarqueeTextView android:textAppearance="@style/TextAppearance.QSControl.DetailItemSecondary"
                          android:ellipsize="marquee"
                          android:id="@id/secondary_summary"
                          android:focusable="true"
                          android:layout_width="fill_parent"
                          android:layout_height="wrap_content"
                          android:layout_marginTop="@dimen/qs_detail_item_secondary_text_margin_top"
                          android:singleLine="true"
                          android:marqueeRepeatLimit="2"
                          android:textDirection="locale" />
  </LinearLayout>
  <ImageView android:id="@android:id/icon2"
             android:focusable="false"
             android:clickable="false"
             android:layout_width="@dimen/qs_detail_item_icon_size"
             android:layout_height="@dimen/qs_detail_item_icon_size"
             android:scaleType="fitXY"
             android:tint="@color/qs_detail_item_icon_tint"
             android:contentDescription="@android:string/mime_type_video_ext"
             android:importantForAccessibility="no"
             android:layout_marginStart="@dimen/qs_detail_selectable_item_horizontal_space"
             style="@style/MIUIQSBorderlessButton" />
</LinearLayout>