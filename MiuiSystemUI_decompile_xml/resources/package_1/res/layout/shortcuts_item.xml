<?xml version='1.0' encoding='utf-8' ?>
<LinearLayout android:gravity="center_vertical"
              android:orientation="horizontal"
              android:layout_width="@dimen/miui_shortcuts_item_min_width"
              android:layout_height="wrap_content"
              android:minHeight="@dimen/miui_shortcuts_item_min_height"
              android:layout_marginStart="@dimen/miui_shortcuts_item_margin_left" xmlns:android="http://schemas.android.com/apk/res/android">
  <ImageView android:layout_gravity="center_vertical"
             android:id="@id/keyboard_shortcuts_icon"
             android:visibility="gone"
             android:layout_width="24.0dp"
             android:layout_height="24.0dp"
             android:layout_centerVertical="true"
             android:layout_marginEnd="24.0dp"
             android:layout_alignParentStart="true" />
  <TextView android:textSize="16.0dp"
            android:textColor="@color/miui_keyboard_shortcuts_text_color"
            android:id="@id/keyboard_shortcuts_keyword"
            android:paddingBottom="4.0dp"
            android:layout_width="@dimen/miui_shortcuts_keyword_width"
            android:layout_height="wrap_content"
            android:maxLines="5"
            android:scrollHorizontally="false"
            android:singleLine="false"
            android:layout_centerVertical="true"
            android:paddingEnd="12.0dp"
            android:layout_alignParentStart="true" />
  <com.miui.systemui.MiuiKeyboardShortcutKeysLayout android:textSize="14.0dp"
                        android:orientation="horizontal"
                        android:id="@id/keyboard_shortcuts_item_container"
                        android:focusable="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scrollHorizontally="false"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true" />
</LinearLayout>