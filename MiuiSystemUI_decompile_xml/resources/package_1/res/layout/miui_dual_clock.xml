<?xml version='1.0' encoding='utf-8' ?>
<com.miui.clock.MiuiDualClock android:gravity="center"
                      android:id="@id/miui_keyguard_dual_clock"
                      android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="@dimen/miui_dual_clock_margin_top" xmlns:android="http://schemas.android.com/apk/res/android">
  <LinearLayout android:orientation="vertical"
                android:id="@id/local_time_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
    <TextView android:textSize="@dimen/miui_dual_clock_city_text_size"
              android:textColor="@color/miui_common_text_color_new"
              android:gravity="center"
              android:layout_gravity="center_horizontal"
              android:id="@id/local_city_name"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:maxWidth="@dimen/miui_dual_clock_max_width"
              android:singleLine="true"
              android:fontFamily="mipro-regular"
              android:elegantTextHeight="false"
              android:fallbackLineSpacing="false" />
    <TextView android:textSize="@dimen/miui_dual_clock_time_text_size"
              android:textColor="@color/miui_common_text_color_new"
              android:gravity="center"
              android:layout_gravity="center_horizontal"
              android:orientation="horizontal"
              android:id="@id/local_time"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="@dimen/miui_dual_clock_time_margin_top"
              android:fontFamily="miclock-time-thin"
              android:layoutDirection="ltr"
              android:elegantTextHeight="false"
              android:fallbackLineSpacing="false" />
    <TextView android:textSize="@dimen/miui_dual_clock_city_text_size"
              android:textColor="@color/miui_common_text_color_new"
              android:gravity="center"
              android:layout_gravity="center_horizontal"
              android:id="@id/local_date"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="@dimen/miui_dual_clock_date_margin_top"
              android:fontFamily="mipro-regular"
              android:elegantTextHeight="false" />
  </LinearLayout>
  <LinearLayout android:orientation="vertical"
                android:id="@id/resident_time_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/miui_resident_time_margin_start"
                android:layout_toEndOf="@id/local_time_layout">
    <TextView android:textSize="@dimen/miui_dual_clock_city_text_size"
              android:textColor="@color/miui_common_text_color_new"
              android:gravity="center"
              android:layout_gravity="center_horizontal"
              android:id="@id/resident_city_name"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:maxWidth="@dimen/miui_dual_clock_max_width"
              android:singleLine="true"
              android:fontFamily="mipro-regular"
              android:elegantTextHeight="false"
              android:fallbackLineSpacing="false" />
    <TextView android:textSize="@dimen/miui_dual_clock_time_text_size"
              android:textColor="@color/miui_common_text_color_new"
              android:gravity="center"
              android:layout_gravity="center_horizontal"
              android:orientation="horizontal"
              android:id="@id/resident_time"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="@dimen/miui_dual_clock_time_margin_top"
              android:fontFamily="miclock-time-thin"
              android:layoutDirection="ltr"
              android:elegantTextHeight="false"
              android:fallbackLineSpacing="false" />
    <TextView android:textSize="@dimen/miui_dual_clock_city_text_size"
              android:textColor="@color/miui_common_text_color_new"
              android:gravity="center"
              android:layout_gravity="center_horizontal"
              android:id="@id/resident_date"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="@dimen/miui_dual_clock_date_margin_top"
              android:fontFamily="mipro-regular"
              android:elegantTextHeight="false" />
  </LinearLayout>
</com.miui.clock.MiuiDualClock>