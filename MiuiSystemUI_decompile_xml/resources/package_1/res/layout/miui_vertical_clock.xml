<?xml version='1.0' encoding='utf-8' ?>
<com.miui.clock.MiuiVerticalClock android:gravity="center|top"
                      android:layout_gravity="center|top"
                      android:orientation="vertical"
                      android:id="@id/miui_keyguard_vertical_clock"
                      android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="@dimen/miui_center_clock_magin_top" xmlns:android="http://schemas.android.com/apk/res/android">
  <TextView android:textSize="@dimen/miui_clock_center_time_text_size"
            android:textColor="@color/miui_common_text_color_new"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:id="@id/current_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingMultiplier="0.79"
            android:fontFamily="miclock-time-thin"
            android:elegantTextHeight="false"
            android:fontFeatureSettings="tnum"
            android:fallbackLineSpacing="false" />
  <TextView android:textSize="@dimen/miui_clock_date_text_size"
            android:textColor="@color/miui_common_text_color_new"
            android:layout_gravity="center_horizontal"
            android:id="@id/current_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/miui_vertical_clock_date_info_top_margin"
            android:fontFamily="mipro-regular"
            android:elegantTextHeight="false" />
  <TextView android:textSize="@dimen/miui_clock_date_text_size"
            android:textColor="@color/miui_common_text_color_new"
            android:ellipsize="end"
            android:gravity="center|top"
            android:layout_gravity="center"
            android:id="@id/unlock_screen_lunar_calendar_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/miui_clock_lunar_calendar_top_margin"
            android:lines="1"
            android:fontFamily="mipro-regular"
            android:elegantTextHeight="false" />
  <TextView android:textSize="@dimen/miui_clock_date_text_size"
            android:textColor="@color/miui_owner_info_light_text_color"
            android:gravity="center|top"
            android:layout_gravity="center"
            android:id="@id/unlock_screen_owner_info"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/miui_clock_owner_info_top_margin"
            android:maxLines="2"
            android:maxEms="9"
            android:elegantTextHeight="false" />
</com.miui.clock.MiuiVerticalClock>