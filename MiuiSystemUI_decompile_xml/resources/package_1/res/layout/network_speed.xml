<?xml version='1.0' encoding='utf-8' ?>
<com.android.systemui.statusbar.views.NetworkSpeedView android:orientation="vertical"
                      android:id="@id/fullscreen_network_speed_view"
                      android:visibility="gone"
                      android:layout_width="wrap_content"
                      android:layout_height="fill_parent"
                      android:paddingStart="@dimen/status_bar_network_speed_padding_start"
                      android:paddingEnd="@dimen/status_bar_network_speed_padding_end" xmlns:android="http://schemas.android.com/apk/res/android">
  <TextView android:textAppearance="@style/TextAppearance.StatusBar.NetWorkSpeedNumber"
            android:layout_gravity="start"
            android:id="@id/network_speed_number"
            android:layout_width="wrap_content"
            android:layout_height="0.0dp"
            android:layout_marginTop="2.0dp"
            android:layout_marginBottom="-1.0dp"
            android:maxLines="1"
            android:singleLine="true"
            android:layout_weight="1.0" />
  <TextView android:textAppearance="@style/TextAppearance.StatusBar.NetWorkSpeedUnit"
            android:layout_gravity="start"
            android:id="@id/network_speed_unit"
            android:layout_width="wrap_content"
            android:layout_height="0.0dp"
            android:layout_marginTop="-1.0dp"
            android:maxLines="1"
            android:singleLine="true"
            android:layout_weight="1.0" />
</com.android.systemui.statusbar.views.NetworkSpeedView>