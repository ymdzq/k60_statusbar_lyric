<?xml version='1.0' encoding='utf-8' ?>
<com.android.systemui.settings.brightness.BrightnessSliderView android:layout_gravity="center"
                      android:id="@id/brightness_slider"
                      android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      android:contentDescription="@string/accessibility_brightness"
                      android:importantForAccessibility="no" xmlns:android="http://schemas.android.com/apk/res/android">
  <RelativeLayout android:focusable="false"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:importantForAccessibility="no">
    <com.android.systemui.settings.brightness.RelativeToggleSeekBar android:layout_gravity="center_vertical"
                          android:id="@id/slider"
                          android:background="@null"
                          android:layout_width="fill_parent"
                          android:layout_height="wrap_content"
                          android:progressDrawable="@drawable/brightness_toggle_progress"
                          android:thumb="@null"
                          android:paddingStart="0.0dp"
                          android:paddingEnd="0.0dp"
                          android:mirrorForRtl="true"
                          android:splitTrack="false" />
    <ImageView android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginTop="@dimen/qs_brightness_icon_margin"
               android:src="@drawable/miui_keyboard_low_brightness"
               android:scaleType="fitXY"
               android:layout_centerVertical="true"
               android:layout_marginStart="@dimen/qs_brightness_icon_margin"
               android:layout_alignParentStart="true" />
  </RelativeLayout>
</com.android.systemui.settings.brightness.BrightnessSliderView>