<?xml version='1.0' encoding='utf-8' ?>
<LinearLayout android:gravity="center_vertical"
              android:layout_gravity="center"
              android:orientation="horizontal"
              android:background="@drawable/qs_security_footer_background"
              android:clickable="true"
              android:layout_width="0.0dp"
              android:layout_height="@dimen/qs_security_footer_single_line_height"
              android:layout_weight="1.0"
              android:layout_marginEnd="@dimen/qs_footer_action_inset"
              android:paddingHorizontal="@dimen/qs_footer_padding" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:systemui="http://schemas.android.com/apk/res-auto">
  <ImageView android:gravity="start"
             android:id="@id/primary_footer_icon"
             android:layout_width="@dimen/qs_footer_icon_size"
             android:layout_height="@dimen/qs_footer_icon_size"
             android:contentDescription="@null"
             android:layout_marginEnd="12.0dp"
             systemui:tint="?android:attr/textColorSecondary" />
  <TextView android:textAppearance="@style/TextAppearance.QS.SecurityFooter"
            android:textColor="@color/qs_tile_label_text_color"
            android:ellipsize="end"
            android:id="@id/footer_text"
            android:layout_width="0.0dp"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:layout_weight="1.0" />
  <ImageView android:id="@id/footer_icon"
             android:layout_width="@dimen/qs_footer_icon_size"
             android:layout_height="@dimen/qs_footer_icon_size"
             android:src="@android:drawable/ic_clear_holo_light"
             android:contentDescription="@null"
             android:layout_marginStart="8.0dp"
             android:autoMirrored="true"
             systemui:tint="?android:attr/textColorSecondary" />
</LinearLayout>