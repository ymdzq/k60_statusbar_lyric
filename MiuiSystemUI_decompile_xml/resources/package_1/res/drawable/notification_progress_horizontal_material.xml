<?xml version='1.0' encoding='utf-8' ?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
  <item android:gravity="center|fill_horizontal"
        android:id="@id/background">
    <shape android:shape="rectangle">
      <size android:height="4.0dp" />
      <solid android:color="@color/notification_progress_horizontal_bg_color" />
      <corners android:radius="6.67dp" />
    </shape>
  </item>
  <item android:gravity="center|fill_horizontal"
        android:id="@android:id/secondaryProgress">
    <scale android:scaleWidth="100%">
      <shape android:shape="rectangle">
        <size android:height="4.0dp" />
        <solid android:color="@color/notification_progress_horizontal_bg_color" />
        <corners android:radius="6.67dp" />
      </shape>
    </scale>
  </item>
  <item android:gravity="center|fill_horizontal"
        android:id="@android:id/progress">
    <scale android:scaleWidth="100%">
      <shape android:shape="rectangle">
        <size android:height="4.0dp" />
        <solid android:color="@color/notification_progress_horizontal_progress_color" />
        <corners android:radius="6.67dp" />
      </shape>
    </scale>
  </item>
</layer-list>