<?xml version='1.0' encoding='utf-8' ?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
  <item android:gravity="center|fill_horizontal"
        android:id="@android:id/background">
    <shape android:tint="@color/font_size_settings_seekbar_color"
           android:shape="rectangle">
      <corners android:radius="@android:dimen/config_screen_magnification_scaling_threshold" />
      <size android:height="2.0dp" />
    </shape>
  </item>
  <item android:gravity="center|fill_horizontal"
        android:id="@android:id/secondaryProgress">
    <scale android:scaleWidth="100%">
      <shape android:tint="?android:attr/colorControlActivated"
             android:shape="rectangle">
        <corners android:radius="@android:dimen/config_screen_magnification_scaling_threshold" />
        <size android:height="2.0dp" />
      </shape>
    </scale>
  </item>
  <item android:gravity="center|fill_horizontal"
        android:id="@android:id/progress">
    <scale android:scaleWidth="100%">
      <shape android:tint="?android:attr/colorControlActivated"
             android:shape="rectangle">
        <corners android:radius="@android:dimen/config_screen_magnification_scaling_threshold" />
        <size android:height="2.0dp" />
        <solid android:color="@android:color/white" />
      </shape>
    </scale>
  </item>
</layer-list>