<?xml version='1.0' encoding='utf-8' ?>
<LinearLayout android:orientation="vertical"
              android:background="@color/settings_default_bg_color"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android">
  <miuix.androidbasewidget.widget.StateEditText android:gravity="start"
                        android:layout_gravity="center_horizontal"
                        android:id="@id/setup_password_entry"
                        android:longClickable="false"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/provision_choose_password_top_margin"
                        android:singleLine="true"
                        android:inputType="textPassword"
                        android:imeOptions="actionNext|flagNoEnterAction"
                        style="@style/StateEditTextPasswordStyle" />
  <View android:layout_width="fill_parent"
        android:layout_height="0.0dp"
        android:layout_weight="1.0" />
</LinearLayout>