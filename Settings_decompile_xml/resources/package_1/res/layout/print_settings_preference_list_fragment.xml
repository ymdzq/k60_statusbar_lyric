<?xml version='1.0' encoding='utf-8' ?>
<LinearLayout android:orientation="vertical"
              android:id="@id/container_material"
              android:background="@android:color/transparent"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android">
  <FrameLayout android:id="@id/pinned_header"
               android:visibility="gone"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" />
  <FrameLayout android:id="@id/prefs_container"
               android:clipChildren="false"
               android:clipToPadding="false"
               android:layout_width="fill_parent"
               android:layout_height="0.0dp"
               android:layout_weight="1.0"
               android:smoothScrollbar="false" />
  <TextView android:gravity="center"
            android:id="@android:id/empty"
            android:padding="@dimen/preference_fragment_padding_side"
            android:visibility="gone"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />
  <RelativeLayout android:id="@id/button_bar"
                  android:visibility="gone"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:layout_weight="0.0">
    <Button android:id="@id/back_button"
            android:layout_width="150.0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5.0dp"
            android:text="@android:string/close_button_text"
            android:layout_alignParentStart="true" />
    <LinearLayout android:orientation="horizontal"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_alignParentEnd="true">
      <Button android:id="@id/skip_button"
              android:visibility="gone"
              android:layout_width="150.0dp"
              android:layout_height="wrap_content"
              android:layout_margin="5.0dp"
              android:text="@android:string/volume_music" />
      <Button android:id="@id/next_button"
              android:layout_width="150.0dp"
              android:layout_height="wrap_content"
              android:layout_margin="5.0dp"
              android:text="@android:string/permdesc_callPhone" />
    </LinearLayout>
  </RelativeLayout>
</LinearLayout>