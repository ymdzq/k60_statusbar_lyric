<?xml version='1.0' encoding='utf-8' ?>
<LinearLayout android:orientation="horizontal"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:paddingStart="@dimen/miuix_preference_item_padding_start"
              android:paddingEnd="@dimen/miuix_preference_item_padding_end" xmlns:android="http://schemas.android.com/apk/res/android">
  <LinearLayout android:layout_gravity="center_vertical"
                android:orientation="vertical"
                android:layout_width="0.0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/miuix_preference_item_padding_inner"
                android:layout_marginBottom="@dimen/miuix_preference_item_padding_inner"
                android:layout_weight="1.0">
    <TextView android:textAppearance="@style/Miuix.AppCompat.TextAppearance.PreferenceList"
              android:id="@android:id/title"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" />
    <TextView android:textAppearance="@style/Miuix.AppCompat.TextAppearance.List.Secondary.Preference"
              android:id="@id/summary"
              android:visibility="gone"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" />
  </LinearLayout>
  <LinearLayout android:layout_gravity="center|end"
                android:orientation="vertical"
                android:id="@id/label_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/miuix_preference_item_padding_inner"
                android:layout_marginBottom="@dimen/miuix_preference_item_padding_inner">
    <TextView android:textAppearance="@style/Miuix.AppCompat.TextAppearance.List.Secondary"
              android:id="@id/label"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:drawablePadding="6.0dp"
              android:lineSpacingExtra="3.0dp"
              android:drawableEnd="@drawable/miuix_appcompat_arrow_right" />
    <TextView android:textAppearance="@style/Miuix.AppCompat.TextAppearance.List.Secondary"
              android:id="@id/label2"
              android:visibility="gone"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:lineSpacingExtra="3.0dp" />
  </LinearLayout>
</LinearLayout>