<?xml version='1.0' encoding='utf-8' ?>
<LinearLayout android:orientation="horizontal"
              android:background="@color/ai_sub_background"
              android:layout_width="fill_parent"
              android:layout_height="@dimen/ai_settings_sub_op_item_height" xmlns:android="http://schemas.android.com/apk/res/android">
  <ImageView android:layout_gravity="center_vertical"
             android:id="@id/selected_image"
             android:visibility="invisible"
             android:layout_width="@dimen/ai_settings_sub_op_image_height"
             android:layout_height="wrap_content"
             android:src="@drawable/ai_settings_picker" />
  <RelativeLayout android:id="@id/item_layout"
                  android:background="@drawable/ai_settings_sub_item_bg"
                  android:layout_width="fill_parent"
                  android:layout_height="@dimen/ai_settings_sub_op_item_height"
                  android:layout_marginRight="@dimen/ai_settings_sub_op_image_height">
    <TextView android:textSize="@dimen/ai_settings_sub_text_size"
              android:textStyle="bold"
              android:textColor="#b3000000"
              android:ellipsize="end"
              android:id="@id/item_name"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginLeft="@dimen/ai_settings_sub_op_item_margin_left"
              android:maxEms="11"
              android:singleLine="true"
              android:layout_centerVertical="true" />
  </RelativeLayout>
</LinearLayout>