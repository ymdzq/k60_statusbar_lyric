<?xml version='1.0' encoding='utf-8' ?>
<LinearLayout android:orientation="horizontal"
              android:background="@drawable/card_shape_corner"
              android:paddingTop="23.0dp"
              android:paddingBottom="22.0dp"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:paddingStart="16.0dp" xmlns:android="http://schemas.android.com/apk/res/android">
  <ImageView android:layout_gravity="center_vertical"
             android:id="@id/ringtone_icon"
             android:layout_width="32.0dp"
             android:layout_height="32.0dp" />
  <LinearLayout android:layout_gravity="center_vertical"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/card_ringtone_title_margin_start">
    <TextView android:textSize="@dimen/card_key_words_text_size"
              android:textColor="@color/ringtone_item_title_color"
              android:ellipsize="end"
              android:id="@id/ringtone_title"
              android:scrollbars="none"
              android:fadingEdge="none"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:singleLine="true"
              android:layout_centerVertical="true"
              android:fontFamily="mipro-medium"
              android:fallbackLineSpacing="false" />
    <TextView android:textSize="@dimen/card_instructions_text_size"
              android:textColor="@color/ringtone_item_value_color"
              android:ellipsize="end"
              android:id="@id/ringtone_value"
              android:scrollbars="none"
              android:fadingEdge="none"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="1.5dp"
              android:singleLine="true"
              android:layout_centerVertical="true"
              android:fallbackLineSpacing="false" />
  </LinearLayout>
</LinearLayout>