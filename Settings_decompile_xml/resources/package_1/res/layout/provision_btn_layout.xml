<?xml version='1.0' encoding='utf-8' ?>
<RelativeLayout android:layout_gravity="bottom"
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" xmlns:android="http://schemas.android.com/apk/res/android">
  <FrameLayout android:id="@id/provision_lyt_btn_back"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_centerVertical="true"
               android:layout_marginStart="@dimen/provisionlib_btn_margin_left_bound"
               android:layout_alignParentStart="true">
    <androidx.appcompat.widget.AppCompatTextView android:textColor="@drawable/btn_text_color_normal"
                          android:id="@id/provision_back_btn"
                          android:text="@string/provision_back"
                          android:paddingStart="@dimen/provision_text_padding_start"
                          android:paddingEnd="@dimen/provision_text_padding_edge_new"
                          style="@style/ProvisionStepTextStyle" />
    <ImageButton android:id="@id/provision_global_back_btn"
                 android:background="@drawable/provision_btn_bg"
                 android:visibility="gone"
                 android:src="@drawable/icon_global_back"
                 android:contentDescription="@string/provision_back"
                 android:paddingStart="@dimen/provision_text_padding_start"
                 android:paddingEnd="@dimen/provision_text_padding_edge_new"
                 style="@style/ProvisionStepTextStyle" />
  </FrameLayout>
  <FrameLayout android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_centerVertical="true"
               android:layout_toStartOf="@id/provision_lyt_btn_next"
               android:layout_toEndOf="@id/provision_lyt_btn_back">
    <androidx.appcompat.widget.AppCompatTextView android:textColor="@drawable/btn_text_color_normal"
                          android:layout_gravity="center_horizontal"
                          android:id="@id/provision_skip_btn"
                          android:visibility="gone"
                          android:text="@string/provision_skip_underline"
                          android:paddingStart="@dimen/provision_text_padding_skip"
                          android:paddingEnd="@dimen/provision_text_padding_skip"
                          style="@style/ProvisionStepSikpTextStyle" />
  </FrameLayout>
  <FrameLayout android:id="@id/provision_lyt_btn_next"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_centerVertical="true"
               android:layout_marginEnd="@dimen/provisionlib_btn_margin_right_bound"
               android:layout_alignParentEnd="true">
    <androidx.appcompat.widget.AppCompatTextView android:textColor="@drawable/btn_text_color_high_light"
                          android:id="@id/provision_next_btn"
                          android:text="@string/provision_next"
                          android:paddingStart="@dimen/provision_text_padding_edge_new"
                          android:paddingEnd="@dimen/provision_text_padding_end"
                          style="@style/ProvisionStepTextStyle" />
    <ImageButton android:id="@id/provision_global_next_btn"
                 android:background="@drawable/provision_btn_bg"
                 android:visibility="gone"
                 android:src="@drawable/icon_global_next"
                 android:contentDescription="@string/provision_next"
                 android:paddingStart="@dimen/provision_text_padding_edge_new"
                 android:paddingEnd="@dimen/provision_text_padding_end"
                 style="@style/ProvisionStepTextStyle" />
  </FrameLayout>
</RelativeLayout>