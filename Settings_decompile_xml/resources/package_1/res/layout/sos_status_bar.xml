<?xml version='1.0' encoding='utf-8' ?>
<LinearLayout android:id="@id/status_bar_view"
              android:background="#ffcf031b"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:paddingStart="10.0dp"
              android:paddingEnd="10.0dp" xmlns:android="http://schemas.android.com/apk/res/android">
  <TextView android:textSize="10.0sp"
            android:textColor="@color/white"
            android:gravity="center|start"
            android:id="@id/sos_title"
            android:layout_width="0.0dp"
            android:layout_height="fill_parent"
            android:text="@string/miui_sos_statusbar_title"
            android:singleLine="true"
            android:layout_weight="1.0" />
  <TextView android:textSize="10.0sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:id="@id/sos_summary"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="@string/miui_sos_statusbar_summary"
            android:singleLine="true" />
</LinearLayout>