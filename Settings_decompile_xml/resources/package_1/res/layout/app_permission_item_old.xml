<?xml version='1.0' encoding='utf-8' ?>
<RelativeLayout android:layout_width="fill_parent"
                android:layout_height="wrap_content" xmlns:android="http://schemas.android.com/apk/res/android">
  <ImageView android:id="@id/perm_icon"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginTop="6.5dp"
             android:contentDescription="@null"
             android:layout_marginStart="10.0dp"
             android:layout_alignParentStart="true" />
  <TextView android:textSize="12.7sp"
            android:textStyle="bold"
            android:textColor="?android:attr/textColorAlertDialogListItem"
            android:id="@id/permission_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="9.3dp"
            android:layout_toEndOf="@id/perm_icon" />
  <TextView android:textSize="10.0sp"
            android:textColor="?android:attr/textColorAlertDialogListItem"
            android:id="@id/permission_list"
            android:paddingBottom="8.0dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2.0dp"
            android:layout_below="@id/permission_group"
            android:layout_marginStart="9.3dp"
            android:layout_toEndOf="@id/perm_icon" />
</RelativeLayout>