<?xml version='1.0' encoding='utf-8' ?>
<LinearLayout android:layout_width="fill_parent"
              android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android">
  <LinearLayout android:gravity="center_vertical"
                android:orientation="vertical"
                android:id="@id/device_name_card_layout"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/device_name_card_height"
                android:paddingStart="@dimen/my_device_card_padding_start"
                android:paddingEnd="@dimen/my_device_card_padding_start">
    <LinearLayout android:orientation="vertical"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content">
      <TextView android:textSize="@dimen/card_key_words_text_size"
                android:scrollbars="none"
                android:fadingEdge="none"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/device_name"
                android:includeFontPadding="false"
                android:fontFamily="mipro-medium"
                android:fallbackLineSpacing="false" />
      <TextView android:ellipsize="end"
                android:id="@id/my_device_name"
                android:scrollbars="none"
                android:fadingEdge="none"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5.45dp"
                android:maxLines="2"
                android:includeFontPadding="false"
                android:fallbackLineSpacing="false"
                style="@style/CardInstructionsText" />
    </LinearLayout>
  </LinearLayout>
</LinearLayout>