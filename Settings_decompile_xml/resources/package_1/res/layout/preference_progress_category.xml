<?xml version='1.0' encoding='utf-8' ?>
<LinearLayout android:gravity="center_vertical"
              android:orientation="horizontal"
              android:background="?attr/preferenceCategoryBackground"
              android:paddingTop="16.0dp"
              android:paddingBottom="16.0dp"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:paddingStart="?android:attr/listPreferredItemPaddingStart"
              android:paddingEnd="?android:attr/listPreferredItemPaddingEnd" xmlns:android="http://schemas.android.com/apk/res/android">
  <LinearLayout android:gravity="center|start"
                android:orientation="horizontal"
                android:id="@id/icon_container"
                android:layout_width="56.0dp"
                android:layout_height="wrap_content">
    <com.android.internal.widget.PreferenceImageView android:id="@android:id/icon"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:maxWidth="18.0dp"
                          android:maxHeight="18.0dp" />
  </LinearLayout>
  <TextView android:layout_gravity="bottom|center|left"
            android:id="@android:id/title"
            android:background="@null"
            android:layout_width="0.0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:textAllCaps="true"
            style="@style/Miuix.AppCompat.TextAppearance.PreferenceCategory" />
  <miuix.androidbasewidget.widget.ProgressBar android:layout_gravity="center_vertical"
                        android:id="@id/scanning_progress"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16.0dp"
                        android:layout_marginRight="16.0dp"
                        android:text="@string/progress_scanning" />
</LinearLayout>