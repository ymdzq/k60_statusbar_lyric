<?xml version='1.0' encoding='utf-8' ?>
<FrameLayout android:background="#80000000"
             android:layout_width="fill_parent"
             android:layout_height="fill_parent"
             android:forceHasOverlappingRendering="false" xmlns:android="http://schemas.android.com/apk/res/android">
  <LinearLayout android:layout_gravity="center"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/fallback_layout_margin_bottom"
                android:layout_marginStart="16.0dp"
                android:layout_marginEnd="16.0dp">
    <ProgressBar android:layout_gravity="center"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginBottom="@dimen/fallback_progressbar_margin_bottom"
                 android:indeterminate="true"
                 android:indeterminateOnly="true"
                 android:indeterminateDrawable="@drawable/fallback_progress_anim"
                 android:indeterminateBehavior="repeat"
                 android:minWidth="@dimen/fallback_progressbar_min_width"
                 android:minHeight="@dimen/fallback_progressbar_min_width"
                 style="@android:style/Widget.Material.ProgressBar.Horizontal" />
    <TextView android:textSize="@dimen/fallback_progressbar_text_size"
              android:textColor="?android:attr/textColorPrimary"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/fallback_home_title" />
  </LinearLayout>
</FrameLayout>