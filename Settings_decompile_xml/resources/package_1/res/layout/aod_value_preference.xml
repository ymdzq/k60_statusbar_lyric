<?xml version='1.0' encoding='utf-8' ?>
<LinearLayout android:orientation="horizontal"
              android:paddingLeft="@dimen/miuix_preference_item_padding_inner"
              android:paddingRight="@dimen/miuix_preference_item_padding_inner"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" xmlns:android="http://schemas.android.com/apk/res/android">
  <TextView android:textAppearance="@style/Miuix.AppCompat.TextAppearance.List.Secondary"
            android:ellipsize="marquee"
            android:gravity="end"
            android:id="@id/text_right"
            android:paddingTop="@dimen/miuix_preference_text_padding_top"
            android:paddingBottom="@dimen/miuix_preference_text_padding_bottom"
            android:fadingEdge="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="@dimen/miuix_preference_text_max_width"
            android:maxLines="1"
            android:textDirection="locale" />
  <ImageView android:id="@id/restricted_icon"
             android:layout_width="16.0dp"
             android:layout_height="16.0dp"
             android:src="@drawable/ic_info"
             android:scaleType="centerInside" />
</LinearLayout>