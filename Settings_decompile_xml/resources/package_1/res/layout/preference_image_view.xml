<?xml version='1.0' encoding='utf-8' ?>
<LinearLayout android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content" xmlns:android="http://schemas.android.com/apk/res/android">
  <ImageView android:id="@id/preference_image"
             android:layout_width="fill_parent"
             android:layout_height="wrap_content"
             android:layout_marginTop="@dimen/preference_image_margin_top"
             android:adjustViewBounds="true"
             android:paddingStart="?android:attr/listPreferredItemPaddingLeft"
             android:paddingEnd="?android:attr/listPreferredItemPaddingRight" />
  <LinearLayout android:orientation="horizontal"
                android:id="@id/content"
                android:background="@drawable/preference_image_click_bg"
                android:paddingBottom="@dimen/preference_image_margin_bottom"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingStart="?android:attr/listPreferredItemPaddingLeft"
                android:paddingEnd="?android:attr/listPreferredItemPaddingRight">
    <LinearLayout android:orientation="vertical"
                  android:layout_width="0.0dp"
                  android:layout_height="wrap_content"
                  android:layout_weight="1.0">
      <TextView android:textAppearance="@style/Miuix.AppCompat.TextAppearance.PreferenceList"
                android:id="@android:id/title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/preference_image_margin_top"
                android:textAlignment="viewStart" />
      <TextView android:textAppearance="@style/Miuix.AppCompat.TextAppearance.List.Secondary"
                android:id="@android:id/summary"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/preference_image_summary_margin_top"
                android:textAlignment="viewStart" />
    </LinearLayout>
    <ImageView android:gravity="center"
               android:layout_gravity="center|end"
               android:id="@id/arrow_right"
               android:visibility="gone"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@drawable/miuix_appcompat_arrow_right"
               android:layout_marginStart="13.5dp" />
  </LinearLayout>
  <LinearLayout android:orientation="horizontal"
                android:id="@id/second_title_container"
                android:background="@drawable/preference_image_click_bg"
                android:paddingTop="@dimen/preference_image_second_title_margin_top"
                android:paddingBottom="@dimen/preference_image_margin_bottom"
                android:visibility="gone"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingStart="?android:attr/listPreferredItemPaddingLeft"
                android:paddingEnd="?android:attr/listPreferredItemPaddingRight">
    <TextView android:textAppearance="@style/Miuix.AppCompat.TextAppearance.PreferenceList"
              android:id="@id/second_title"
              android:layout_width="0.0dp"
              android:layout_height="wrap_content"
              android:layout_weight="1.0"
              android:textAlignment="viewStart" />
    <ImageView android:gravity="center"
               android:layout_gravity="center|end"
               android:id="@id/arrow_right_2"
               android:visibility="gone"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@drawable/miuix_appcompat_arrow_right"
               android:layout_marginStart="13.5dp" />
  </LinearLayout>
</LinearLayout>