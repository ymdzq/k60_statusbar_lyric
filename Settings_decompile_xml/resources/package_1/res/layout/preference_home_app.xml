<?xml version='1.0' encoding='utf-8' ?>
<LinearLayout android:gravity="center_vertical"
              android:background="?attr/preferenceItemBackground"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content" xmlns:android="http://schemas.android.com/apk/res/android">
  <LinearLayout android:gravity="center_vertical"
                android:id="@id/home_app_pref"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1.0">
    <RadioButton android:layout_gravity="center_vertical"
                 android:orientation="vertical"
                 android:id="@id/home_radio"
                 android:focusable="false"
                 android:clickable="false"
                 android:layout_width="wrap_content"
                 android:layout_height="fill_parent" />
    <ImageView android:gravity="center"
               android:layout_gravity="center"
               android:id="@android:id/icon"
               android:paddingRight="@dimen/miuix_preference_item_padding_inner"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginTop="@dimen/miuix_preference_item_padding_inner"
               android:layout_marginBottom="@dimen/miuix_preference_item_padding_inner"
               android:scaleType="fitCenter"
               android:adjustViewBounds="true"
               android:maxHeight="47.0dp"
               android:minWidth="48.0dp" />
    <TextView android:textAppearance="?android:attr/textAppearanceMedium"
              android:ellipsize="end"
              android:id="@android:id/title"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:singleLine="true"
              android:layout_weight="1.0" />
  </LinearLayout>
  <View android:id="@id/home_divider"
        android:background="@android:drawable/divider_horizontal_dark"
        android:layout_width="2.0dp"
        android:layout_height="fill_parent"
        android:layout_marginTop="5.0dp"
        android:layout_marginBottom="5.0dp" />
  <ImageView android:layout_gravity="center"
             android:id="@id/home_app_uninstall"
             android:layout_width="wrap_content"
             android:layout_height="fill_parent"
             android:src="@drawable/ic_menu_delete_holo_dark"
             android:paddingStart="12.0dp" />
</LinearLayout>