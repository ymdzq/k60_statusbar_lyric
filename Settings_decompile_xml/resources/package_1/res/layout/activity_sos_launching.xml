<?xml version='1.0' encoding='utf-8' ?>
<androidx.constraintlayout.widget.ConstraintLayout android:background="#881f1416"
                      android:layout_width="fill_parent"
                      android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:settings="http://schemas.android.com/apk/res-auto">
  <com.android.settings.emergency.ui.view.CircleProgressBar android:id="@id/sos_progressbar"
                        android:layout_width="200.0dp"
                        android:layout_height="200.0dp"
                        android:layout_marginBottom="20.0dp"
                        settings:layout_constraintBottom_toTopOf="@id/counting_down"
                        settings:layout_constraintEnd_toEndOf="parent"
                        settings:layout_constraintStart_toStartOf="parent" />
  <TextView android:textSize="30.0sp"
            android:textColor="#ffffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/miui_sos_launching_title"
