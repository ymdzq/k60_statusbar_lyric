          android:layout_height="50.0dp"
          android:layout_marginBottom="40.0dp"
          android:minWidth="94.67dp"
          android:text="@android:string/cancel"
          android:singleLine="true"
          android:paddingStart="3.0dp"
          android:paddingEnd="3.0dp"
          settings:layout_constraintBottom_toBottomOf="parent"
          settings:layout_constraintEnd_toEndOf="parent"
          settings:layout_constraintStart_toStartOf="parent"
          settings:layout_constraintWidth_max="336.0dp"
          style="@style/Widget.Button" />
</androidx.constraintlayout.widget.ConstraintLayout>