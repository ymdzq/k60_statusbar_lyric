<?xml version='1.0' encoding='utf-8' ?>
<LinearLayout android:gravity="center_vertical"
              android:layout_gravity="center_vertical"
              android:background="?attr/preferenceItemBackground"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:minHeight="@dimen/valuepreference_row_height" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:settings="http://schemas.android.com/apk/res-auto">
  <LinearLayout android:gravity="center"
                android:orientation="horizontal"
                android:paddingTop="@dimen/valuepreference_icon_padding"
                android:paddingBottom="@dimen/valuepreference_icon_padding"
                android:layout_width="@dimen/valuepreference_icon_width"
                android:layout_height="@dimen/valuepreference_icon_height"
                android:minWidth="@dimen/preference_icon_minWidth">
    <ImageView android:gravity="center"
               android:layout_gravity="center"
               android:id="@android:id/icon"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginTop="@dimen/miuix_preference_item_padding_inner"
               android:layout_marginBottom="@dimen/miuix_preference_item_padding_inner"
               android:scaleType="fitCenter"
               android:adjustViewBounds="true"
               android:paddingEnd="@dimen/valuepreference_image_padding"
               style="@style/Widget.PreferenceIcon" />
  </LinearLayout>
  <RelativeLayout android:gravity="center_vertical"
                  android:layout_gravity="center_vertical"
                  android:paddingTop="0.0px"
                  android:paddingBottom="0.0px"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_weight="1.0"
                  style="@style/Widget.PreferenceItem">
    <TextView android:textAppearance="@style/Miuix.AppCompat.TextAppearance.PreferenceList"
              android:ellipsize="end"
              android:id="@android:id/title"
              android:scrollbars="none"
              android:fadingEdge="horizontal"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:maxLines="2"
              android:textAlignment="viewStart" />
    <TextView android:textAppearance="@style/Miuix.AppCompat.TextAppearance.List.Secondary.Preference"
              android:id="@android:id/summary"
              android:scrollbars="none"
              android:fadingEdge="none"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="@dimen/miuix_preference_summary_margin_top"
              android:maxLines="10"
              android:layout_below="@android:id/title"
              android:textAlignment="viewStart"
              android:layout_alignStart="@android:id/title" />
  </RelativeLayout>
  <LinearLayout android:gravity="center"
                android:orientation="vertical"
                android:id="@android:id/widget_frame"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="@dimen/miuix_preference_widget_width" />
  <androidx.appcompat.widget.AppCompatImageView android:gravity="center"
                        android:layout_gravity="center|end"
                        android:id="@id/arrow_right"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/miuix_preference_item_padding_inner"
                        settings:srcCompat="@drawable/miuix_appcompat_arrow_right" />
</LinearLayout>