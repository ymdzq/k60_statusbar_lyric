<?xml version='1.0' encoding='utf-8' ?>
<LinearLayout android:orientation="horizontal"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              style="@style/Widget.ListView.Item.DoubleLine" xmlns:android="http://schemas.android.com/apk/res/android">
  <ImageView android:layout_gravity="center_vertical"
             android:id="@id/icon_imageView"
             android:layout_width="@android:dimen/app_icon_size"
             android:layout_height="@android:dimen/app_icon_size" />
  <LinearLayout android:layout_width="0.0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0">
    <LinearLayout android:layout_gravity="center_vertical"
                  android:orientation="horizontal"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginStart="15.0dp"
                  android:layout_marginEnd="15.0dp">
      <TextView android:textAppearance="@style/Miuix.AppCompat.TextAppearance.List.Primary"
                android:id="@id/app_name_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="app_name"
                android:layout_weight="1.0" />
    </LinearLayout>
  </LinearLayout>
  <miuix.appcompat.widget.Spinner android:layout_gravity="center|end"
                        android:id="@id/right_spinner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
</LinearLayout>