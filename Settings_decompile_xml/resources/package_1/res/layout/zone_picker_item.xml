<?xml version='1.0' encoding='utf-8' ?>
<TwoLineListItem android:background="?attr/preferenceItemBackground"
                 android:layout_width="fill_parent"
                 android:layout_height="wrap_content"
                 android:mode="twoLine" xmlns:android="http://schemas.android.com/apk/res/android">
  <TextView android:textAppearance="@style/Miuix.AppCompat.TextAppearance.PreferenceList"
            android:id="@android:id/text1"
            android:paddingBottom="0.0dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.PreferenceItem" />
  <TextView android:textAppearance="@style/Miuix.AppCompat.TextAppearance.List.Secondary.Preference"
            android:id="@android:id/text2"
            android:paddingTop="0.0dp"
            android:paddingRight="0.0dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@android:id/text1"
            android:layout_alignLeft="@android:id/text1"
            style="@style/Widget.PreferenceItem" />
</TwoLineListItem>