<?xml version='1.0' encoding='utf-8' ?>
<RelativeLayout android:paddingTop="13.1dp"
                android:paddingBottom="13.1dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingEnd="19.1dp" xmlns:android="http://schemas.android.com/apk/res/android">
  <LinearLayout android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@id/call_arrow"
                android:layout_alignParentStart="true">
    <TextView android:id="@id/call_title"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:fontFamily="mipro-medium" />
    <TextView android:id="@id/call_detail"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:fontFamily="mipro" />
  </LinearLayout>
  <ImageView android:id="@id/call_arrow"
             android:layout_width="21.8dp"
             android:layout_height="21.8dp"
             android:src="@drawable/btn_inline_detail_normal_light_drawable"
             android:layout_centerVertical="true"
             android:layout_alignParentEnd="true" />
</RelativeLayout>