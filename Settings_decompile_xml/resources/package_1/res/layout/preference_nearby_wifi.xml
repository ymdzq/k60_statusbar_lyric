<?xml version='1.0' encoding='utf-8' ?>
<LinearLayout android:gravity="center_vertical"
              android:layout_gravity="center_vertical"
              android:background="?attr/preferenceItemBackground"
              android:focusable="false"
              android:clickable="false"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:minHeight="60.0dp"
              android:paddingStart="@dimen/wifi_nearby_padding_start"
              android:paddingEnd="@dimen/wifi_nearby_padding_start" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
  <TextView android:textColor="@color/nearby_wifi_color"
            android:ellipsize="middle"
            android:id="@android:id/title"
            android:fadingEdge="horizontal"
            android:layout_width="0.0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20.0dp"
            android:layout_marginBottom="20.0dp"
            android:singleLine="true"
            android:layout_weight="1.0"
            android:textAlignment="viewStart"
            style="@style/Miuix.AppCompat.TextAppearance.PreferenceList" />
  <LinearLayout android:gravity="center"
                android:orientation="vertical"
                android:id="@id/refresh_frame"
                android:layout_width="@dimen/preference_wifi_custom_widget_width"
                android:layout_height="@dimen/preference_wifi_custom_widget_width"
                android:minWidth="@dimen/miuix_preference_widget_width">
    <FrameLayout android:id="@id/refresh_anim_bg"
                 android:layout_width="@dimen/wifi_custom_widget_background_width"
                 android:layout_height="@dimen/wifi_custom_widget_background_width">
      <ImageView android:id="@id/refresh_anim"
                 android:layout_width="fill_parent"
                 android:layout_height="fill_parent"
                 android:src="@drawable/wifi_refresh"
                 android:scaleType="centerInside" />
    </FrameLayout>
  </LinearLayout>
</LinearLayout>