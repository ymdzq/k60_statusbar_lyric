<?xml version='1.0' encoding='utf-8' ?>
<LinearLayout android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android">
  <FrameLayout android:id="@android:id/list_container"
               android:layout_width="fill_parent"
               android:layout_height="0.0dp"
               android:layout_weight="1.0">
    <androidx.recyclerview.widget.RecyclerView android:id="@id/recycler_view"
                          android:paddingTop="0.0dp"
                          android:paddingBottom="0.0dp"
                          android:clipToPadding="false"
                          android:layout_width="fill_parent"
                          android:layout_height="fill_parent"
                          style="?attr/preferenceFragmentListStyle" />
  </FrameLayout>
  <TextView android:gravity="center"
            android:id="@android:id/empty"
            android:padding="8.0dp"
            android:visibility="gone"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />
</LinearLayout>