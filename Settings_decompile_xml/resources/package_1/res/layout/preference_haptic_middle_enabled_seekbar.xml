<?xml version='1.0' encoding='utf-8' ?>
<LinearLayout android:gravity="center_vertical"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:paddingEnd="?android:attr/scrollbarSize" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:settings="http://schemas.android.com/apk/res-auto">
  <LinearLayout android:gravity="center_vertical"
                android:orientation="horizontal"
                android:id="@id/title_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/title_layout_top_margin"
                android:layout_marginBottom="@dimen/title_layout_bottom_margin"
                android:paddingStart="@dimen/title_layout_padding_left"
                android:paddingEnd="@dimen/volumn_horizontal_edge">
    <com.android.settings.sound.VolumeStreamStateView android:layout_gravity="center"
                          android:id="@android:id/icon"
                          android:layout_width="@dimen/volume_icon_width"
                          android:layout_height="@dimen/volume_icon_height" />
    <TextView android:textSize="@dimen/volume_seekbar_title_text_size"
              android:ellipsize="marquee"
              android:id="@android:id/title"
              android:fadingEdge="horizontal"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:fontFamily="mipro-medium"
              android:layout_marginStart="@dimen/seekbar_title_left_margin" />
  </LinearLayout>
  <com.android.settings.widget.MiuiHapticInfinitySeekBar android:id="@id/seekbar"
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/font_size_view_height"
                        android:layout_marginStart="@dimen/title_layout_padding_left"
                        android:layout_marginEnd="@dimen/title_layout_padding_left" />
  <FrameLayout android:layout_width="fill_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="8.0dp"
               android:layout_marginStart="@dimen/title_layout_padding_left"
               android:layout_marginEnd="@dimen/title_layout_padding_left">
    <TextView android:textSize="13.8sp"
              android:textColor="@color/normal_summary_color"
              android:layout_gravity="start"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/haptic_descripthion_for_min_level"
              android:fontFamily="MILanPro"
              android:paddingStart="2.0dp" />
    <TextView android:textSize="13.8sp"
              android:textColor="@color/normal_summary_color"
              android:layout_gravity="center_horizontal"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/haptic_descripthion_for_medium_level"
              android:fontFamily="MILanPro" />
    <TextView android:textSize="13.8sp"
              android:textColor="@color/normal_summary_color"
              android:layout_gravity="end"
              android:id="@id/haptic_max_level"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/haptic_descripthion_for_max_level"
              android:fontFamily="MILanPro"
              android:paddingEnd="2.0dp" />
  </FrameLayout>
</LinearLayout>