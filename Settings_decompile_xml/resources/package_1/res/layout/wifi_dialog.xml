<?xml version='1.0' encoding='utf-8' ?>
<ScrollView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fadeScrollbars="false" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:settings="http://schemas.android.com/apk/res-auto">
  <LinearLayout android:orientation="vertical"
                android:id="@id/l_wifidialog"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/wifi_marginEnd">
    <LinearLayout android:id="@id/l_info_reconnect"
                  android:visibility="gone"
                  style="@style/miui_wifi_item">
      <TextView android:layout_gravity="center"
                android:id="@id/info_reconnect"
                style="@style/wifi_reconnect" />
    </LinearLayout>
    <LinearLayout android:id="@id/info"
                  android:visibility="gone"
                  style="@style/wifi_section" />
    <LinearLayout android:id="@id/type"
                  android:visibility="gone"
                  style="@style/wifi_section">
      <LinearLayout style="@style/input_item_horizontal">
        <TextView android:text="@string/wifi_ssid"
                  android:labelFor="@id/ssid"
                  style="@style/input_item_label" />
        <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="fill_parent"
                              android:layout_height="wrap_content">
          <EditText android:id="@id/ssid"
                    android:layout_width="0.0dp"
                    android:layout_height="wrap_content"
                    android:hint="@string/wifi_ssid_hint"
                    android:singleLine="true"
                    android:inputType="textNoSuggestions"
                    settings:layout_constraintEnd_toStartOf="@id/ssid_scanner_button"
                    settings:layout_constraintStart_toStartOf="parent"
                    style="@style/wifi_item_edit_content" />
          <ImageButton android:id="@id/ssid_scanner_button"
                       android:background="?android:attr/selectableItemBackground"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:src="@drawable/ic_scan_24dp"
                       android:minWidth="@dimen/min_tap_target_size"
                       android:minHeight="@dimen/min_tap_target_size"
                       android:contentDescription="@string/wifi_dpp_scan_qr_code"
                       settings:layout_constraintEnd_toEndOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <LinearLayout android:id="@id/ssid_too_long_warning"
                      android:visibility="gone"
                      android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      style="@style/wifi_item">
          <TextView android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/wifi_ssid_too_long"
                    style="@style/wifi_item_warning" />
        </LinearLayout>
      </LinearLayout>
      <LinearLayout style="@style/wifi_spinner_item">
        <TextView android:text="@string/wifi_security"
                  style="@style/wifi_spinner_item_label" />
        <miuix.appcompat.widget.Spinner android:entries="@array/wifi_security"
                              android:id="@id/security"
                              android:prompt="@string/wifi_security"
                              style="@style/wifi_spinner_item_content" />
        <miuix.appcompat.widget.Spinner android:entries="@array/mi2_wifi_security"
                              android:id="@id/mi2_security"
                              android:visibility="gone"
                              android:prompt="@string/wifi_security"
                              style="@style/wifi_spinner_item_content" />
      </LinearLayout>
    </LinearLayout>
    <LinearLayout android:id="@id/security_fields"
                  android:visibility="gone"
                  style="@style/wifi_section">
      <LinearLayout android:orientation="vertical"
                    android:id="@id/eap"
                    android:visibility="gone"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">
        <LinearLayout android:id="@id/l_method"
                      android:visibility="gone"
                      style="@style/wifi_spinner_layout_constant">
          <TextView android:text="@string/wifi_eap_method"
                    style="@style/wifi_spinner_title" />
          <miuix.appcompat.widget.Spinner android:id="@id/method"
                                android:prompt="@string/wifi_eap_method"
                                style="@style/wifi_spinner" />
        </LinearLayout>
        <LinearLayout android:id="@id/l_sim"
                      android:visibility="gone"
                      style="@style/wifi_spinner_layout_constant">
          <TextView android:text="@string/wifi_eap_sim_simcard"
                    style="@style/wifi_spinner_title" />
          <miuix.appcompat.widget.Spinner android:id="@id/sim"
                                android:prompt="@string/wifi_eap_sim_simcard"
                                style="@style/wifi_spinner" />
        </LinearLayout>
        <LinearLayout android:id="@id/l_phase2"
                      android:visibility="gone"
                      style="@style/wifi_spinner_layout_constant">
          <TextView android:text="@string/please_select_phase2"
                    style="@style/wifi_spinner_title" />
          <miuix.appcompat.widget.Spinner android:id="@id/phase2"
                                android:prompt="@string/please_select_phase2"
                                style="@style/wifi_spinner" />
        </LinearLayout>
        <LinearLayout android:id="@id/l_ca_cert"
                      android:visibility="gone"
                      style="@style/wifi_spinner_layout_constant">
          <TextView android:text="@string/wifi_eap_ca_cert"
                    style="@style/wifi_spinner_title" />
          <miuix.appcompat.widget.Spinner android:id="@id/ca_cert"
                                android:prompt="@string/wifi_eap_ca_cert"
                                style="@style/wifi_spinner" />
        </LinearLayout>
        <LinearLayout android:id="@id/l_min_tls_ver"
                      android:visibility="gone"
                      android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      style="@style/wifi_item">
          <TextView android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/wifi_eap_min_tls_ver"
                    style="@style/wifi_item_label" />
          <miuix.appcompat.widget.Spinner android:id="@id/min_tls_ver"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:prompt="@string/wifi_eap_min_tls_ver"
                                style="@style/wifi_item_spinner" />
        </LinearLayout>
        <LinearLayout android:id="@id/l_ocsp"
                      android:visibility="gone"
                      style="@style/wifi_spinner_layout_constant">
          <TextView android:text="@string/wifi_eap_ocsp"
                    style="@style/wifi_spinner_title" />
          <miuix.appcompat.widget.Spinner android:entries="@array/eap_ocsp_type"
                                android:id="@id/ocsp"
                                android:prompt="@string/wifi_eap_ocsp"
                                style="@style/wifi_spinner" />
        </LinearLayout>
        <LinearLayout android:id="@id/no_ca_cert_warning"
                      android:visibility="gone"
                      style="@style/miui_wifi_item">
          <TextView android:textSize="14.3sp"
                    android:textColor="#fffe3d28"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/wifi_do_not_validate_eap_server_warning" />
        </LinearLayout>
        <LinearLayout android:id="@id/l_domain"
                      android:visibility="gone"
                      android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="@dimen/wifi_edittexts_between_margin">
          <miuix.androidbasewidget.widget.StateEditText android:textAppearance="@style/Miuix.AppCompat.TextAppearance.PreferenceList"
                                android:gravity="center|left"
                                android:id="@id/domain"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/wifi_eap_domain"
                                android:singleLine="true"
                                android:inputType="textNoSuggestions"
                                style="@style/input_capsule_horizontal_constant" />
        </LinearLayout>
        <LinearLayout android:id="@id/no_domain_warning"
                      android:visibility="gone"
                      style="@style/miui_wifi_item">
          <TextView android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/wifi_no_domain_warning"
                    style="@style/wifi_item_warning" />
        </LinearLayout>
        <LinearLayout android:id="@id/l_user_cert"
                      android:visibility="gone"
                      style="@style/wifi_spinner_layout_constant">
          <TextView android:text="@string/wifi_eap_user_cert"
                    style="@style/wifi_spinner_title" />
          <miuix.appcompat.widget.Spinner android:id="@id/user_cert"
                                android:prompt="@string/wifi_eap_user_cert"
                                style="@style/wifi_spinner" />
        </LinearLayout>
        <LinearLayout android:id="@id/no_user_cert_warning"
                      android:visibility="gone"
                      android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      style="@style/wifi_item">
          <TextView android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/wifi_no_user_cert_warning"
                    style="@style/wifi_item_warning" />
        </LinearLayout>
        <LinearLayout android:id="@id/l_privacy_settings_fields"
                      android:visibility="gone"
                      style="@style/wifi_spinner_layout_constant">
          <TextView android:text="@string/wifi_privacy_settings"
                    style="@style/wifi_spinner_title" />
          <miuix.appcompat.widget.Spinner android:entries="@array/wifi_privacy_entries"
                                android:id="@id/l_privacy_settings"
                                android:prompt="@string/wifi_privacy_settings"
                                style="@style/wifi_spinner" />
        </LinearLayout>
        <LinearLayout android:id="@id/l_identity"
                      android:visibility="gone"
                      android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="@dimen/wifi_edittexts_between_margin">
          <miuix.androidbasewidget.widget.StateEditText android:textAppearance="@style/Miuix.AppCompat.TextAppearance.PreferenceList"
                                android:gravity="center|left"
                                android:id="@id/identity"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/wifi_eap_identity"
                                android:singleLine="true"
                                android:inputType="textEmailAddress"
                                style="@style/input_capsule_horizontal_constant" />
        </LinearLayout>
        <LinearLayout android:id="@id/l_anonymous"
                      android:visibility="gone"
                      android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="@dimen/wifi_edittexts_between_margin">
          <miuix.androidbasewidget.widget.StateEditText android:textAppearance="@style/Miuix.AppCompat.TextAppearance.PreferenceList"
                                android:gravity="center|left"
                                android:id="@id/anonymous"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/wifi_eap_anonymous"
                                android:singleLine="true"
                                android:inputType="textNoSuggestions"
                                style="@style/input_capsule_horizontal_constant" />
        </LinearLayout>
        <LinearLayout android:id="@id/l_password_layout"
                      android:visibility="gone"
                      style="@style/miui_wifi_item">
          <TextView android:layout_gravity="start"
                    android:id="@id/l_password_text"
                    android:text="@string/wifi_password"
                    android:labelFor="@id/l_password"
                    style="@style/wifi_item_label" />
          <FrameLayout android:layout_width="fill_parent"
                       android:layout_height="34.0dp">
            <EditText android:id="@id/l_password"
                      android:password="true"
                      android:singleLine="true"
                      android:inputType="textNoSuggestions"
                      android:paddingEnd="50.0dp"
                      style="@style/wifi_item_edit_content" />
            <ImageView android:layout_gravity="center|end"
                       android:id="@id/l_show_password_img"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:src="@drawable/wifi_not_show_password"
                       android:contentDescription="@string/wifi_show_password" />
          </FrameLayout>
        </LinearLayout>
      </LinearLayout>
      <LinearLayout android:id="@id/password_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/wifi_edittexts_between_margin">
        <miuix.androidbasewidget.widget.StateEditText android:textAppearance="@style/Miuix.AppCompat.TextAppearance.PreferenceList"
                              android:id="@id/password"
                              android:layout_width="fill_parent"
                              android:layout_height="wrap_content"
                              android:hint="@string/wifi_password"
                              android:inputType="textPassword"
                              settings:miuixAppcompatWidgetManager="miuix.androidbasewidget.widget.PasswordWidgetManager"
                              style="@style/input_capsule_horizontal_constant"
                              widgetManager="miui.widget.PasswordWidgetManager" />
        <ImageView android:layout_gravity="center|end"
                   android:id="@id/show_password_img"
                   android:visibility="gone"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:contentDescription="@string/wifi_show_password" />
        <ImageButton android:layout_gravity="center|end"
                     android:id="@id/password_scanner_button"
                     android:background="?android:attr/selectableItemBackground"
                     android:visibility="gone"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:src="@drawable/ic_scan_24dp"
                     android:minWidth="@dimen/min_tap_target_size"
                     android:minHeight="@dimen/min_tap_target_size"
                     android:contentDescription="@string/wifi_dpp_scan_qr_code" />
      </LinearLayout>
      <LinearLayout android:id="@id/show_password_layout"
                    style="@style/miui_wifi_item">
        <TextView android:visibility="gone"
                  style="@style/wifi_item_label" />
        <CheckBox android:textSize="14.0sp"
                  android:id="@id/show_password"
                  android:layout_marginLeft="0.0dp"
                  android:text="@string/wifi_show_password"
                  style="@style/wifi_checkbox_item_content" />
      </LinearLayout>
      <LinearLayout android:id="@id/wapi_cert"
                    android:visibility="gone"
                    style="@style/wifi_spinner_layout_constant">
        <TextView android:text="@string/wapi_cert_select"
                  style="@style/wifi_spinner_title" />
        <miuix.appcompat.widget.Spinner android:id="@id/wapi_cert_select"
                              android:prompt="@string/wapi_cert_select"
                              style="@style/wifi_spinner" />
      </LinearLayout>
      <LinearLayout android:id="@id/wapi_psk"
                    android:visibility="gone"
                    style="@style/wifi_spinner_layout_constant">
        <TextView android:text="@string/wapi_psk_type"
                  style="@style/wifi_spinner_title" />
        <miuix.appcompat.widget.Spinner android:entries="@array/wapi_psk_type"
                              android:id="@id/wapi_psk_type"
                              android:prompt="@string/wapi_psk_type"
                              style="@style/wifi_spinner" />
      </LinearLayout>
      <LinearLayout android:id="@id/privacy_settings_fields"
                    android:visibility="gone"
                    style="@style/wifi_spinner_layout_constant">
        <TextView android:text="@string/wifi_privacy_settings"
                  style="@style/wifi_spinner_title" />
        <miuix.appcompat.widget.Spinner android:entries="@array/wifi_privacy_entries"
                              android:id="@id/privacy_settings"
                              android:prompt="@string/wifi_privacy_settings"
                              style="@style/wifi_spinner" />
      </LinearLayout>
    </LinearLayout>
    <LinearLayout android:id="@id/wifi_advanced_toggle"
                  android:visibility="gone"
                  style="@style/miui_wifi_item">
      <CheckBox android:textSize="14.0sp"
                android:id="@id/wifi_advanced_togglebox"
                android:text="@string/wifi_show_advanced"
                style="@style/wifi_item_content" />
    </LinearLayout>
    <LinearLayout android:orientation="vertical"
                  android:id="@id/wifi_advanced_fields"
                  android:visibility="gone"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content">
      <CheckBox android:textSize="14.0sp"
                android:id="@id/share_this_wifi"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/share_this_wifi"
                style="@style/wifi_item_content" />
      <LinearLayout android:id="@id/metered_settings_fields"
                    style="@style/wifi_spinner_layout">
        <TextView android:text="@string/data_usage_metered_yes"
                  style="@style/wifi_spinner_title" />
        <miuix.appcompat.widget.Spinner android:entries="@array/wifi_metered_entries"
                              android:id="@id/metered_settings"
                              android:prompt="@string/data_usage_metered_yes"
                              style="@style/wifi_spinner" />
      </LinearLayout>
      <LinearLayout android:id="@id/proxy_settings_fields"
                    android:visibility="gone"
                    style="@style/wifi_spinner_layout">
        <TextView android:id="@id/proxy_settings_title"
                  android:text="@string/proxy_settings_title"
                  style="@style/wifi_spinner_title" />
        <miuix.appcompat.widget.Spinner android:entries="@array/wifi_proxy_settings"
                              android:id="@id/proxy_settings"
                              android:prompt="@string/proxy_settings_title"
                              style="@style/wifi_spinner" />
      </LinearLayout>
      <LinearLayout android:id="@id/proxy_warning_limited_support"
                    android:background="@null"
                    android:visibility="gone"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">
        <TextView android:visibility="gone"
                  style="@style/wifi_item_label" />
        <TextView android:visibility="gone"
                  android:text="@string/proxy_warning_limited_support"
                  style="@style/wifi_item_content" />
      </LinearLayout>
      <LinearLayout android:id="@id/proxy_pac_field"
                    android:visibility="gone"
                    android:layout_marginTop="20.0dp"
                    style="@style/wifi_section">
        <LinearLayout android:layout_width="fill_parent"
                      android:layout_height="wrap_content">
          <TextView android:text="@string/proxy_url_title"
                    style="@style/input_item_label" />
          <EditText android:id="@id/proxy_pac"
                    android:hint="@string/proxy_url_hint"
                    android:singleLine="true"
                    android:inputType="textNoSuggestions"
                    style="@style/input_item_content" />
        </LinearLayout>
      </LinearLayout>
      <LinearLayout android:id="@id/proxy_fields"
                    android:visibility="gone"
                    android:layout_marginTop="20.0dp"
                    style="@style/wifi_section">
        <LinearLayout android:layout_width="fill_parent"
                      android:layout_height="wrap_content">
          <TextView android:text="@string/proxy_hostname_label"
                    style="@style/input_item_label" />
          <EditText android:id="@id/proxy_hostname"
                    android:hint="@string/proxy_hostname_hint"
                    android:singleLine="true"
                    android:inputType="textNoSuggestions"
                    style="@style/input_item_content" />
        </LinearLayout>
        <LinearLayout style="@style/input_item_horizontal">
          <TextView android:text="@string/proxy_port_label"
                    style="@style/input_item_label" />
          <EditText android:id="@id/proxy_port"
                    android:hint="@string/proxy_port_hint"
                    android:singleLine="true"
                    android:inputType="number"
                    style="@style/input_item_content" />
        </LinearLayout>
        <LinearLayout style="@style/input_item_horizontal">
          <TextView android:text="@string/proxy_exclusionlist_label"
                    style="@style/input_item_label" />
          <EditText android:id="@id/proxy_exclusionlist"
                    android:hint="@string/proxy_exclusionlist_hint"
                    android:singleLine="true"
                    android:inputType="textNoSuggestions"
                    style="@style/input_item_content" />
        </LinearLayout>
      </LinearLayout>
      <LinearLayout android:id="@id/ip_fields"
                    android:visibility="gone"
                    style="@style/wifi_spinner_layout">
        <TextView android:text="@string/wifi_ip_settings"
                  style="@style/wifi_spinner_title" />
        <miuix.appcompat.widget.Spinner android:entries="@array/wifi_ip_settings"
                              android:id="@id/ip_settings"
                              android:prompt="@string/wifi_ip_settings"
                              style="@style/wifi_spinner" />
      </LinearLayout>
      <LinearLayout android:id="@id/staticip"
                    android:visibility="gone"
                    android:layout_marginTop="20.0dp"
                    style="@style/wifi_section">
        <LinearLayout style="@style/input_item_horizontal">
          <TextView android:text="@string/wifi_ip_address"
                    style="@style/input_item_label" />
          <EditText android:id="@id/ipaddress"
                    android:hint="@string/wifi_ip_address_hint"
                    android:singleLine="true"
                    android:inputType="textNoSuggestions"
                    style="@style/input_item_content" />
        </LinearLayout>
        <LinearLayout style="@style/input_item_horizontal">
          <TextView android:text="@string/wifi_gateway"
                    style="@style/input_item_label" />
          <EditText android:id="@id/gateway"
                    android:hint="@string/wifi_gateway_hint"
                    android:singleLine="true"
                    android:inputType="textNoSuggestions"
                    style="@style/input_item_content" />
        </LinearLayout>
        <LinearLayout style="@style/input_item_horizontal">
          <TextView android:text="@string/wifi_network_prefix_length"
                    style="@style/input_item_label" />
          <EditText android:id="@id/network_prefix_length"
                    android:hint="@string/wifi_network_prefix_length_hint"
                    android:singleLine="true"
                    android:inputType="number"
                    style="@style/input_item_content" />
        </LinearLayout>
        <LinearLayout android:layout_width="fill_parent"
                      android:layout_height="wrap_content">
          <TextView android:text="@string/wifi_dns1"
                    style="@style/input_item_label" />
          <EditText android:id="@id/dns1"
                    android:hint="@string/wifi_dns1_hint"
                    android:singleLine="true"
                    android:inputType="textNoSuggestions"
                    style="@style/input_item_content" />
        </LinearLayout>
        <LinearLayout style="@style/input_item_horizontal">
          <TextView android:text="@string/wifi_dns2"
                    style="@style/input_item_label" />
          <EditText android:id="@id/dns2"
                    android:hint="@string/wifi_dns2_hint"
                    android:singleLine="true"
                    android:inputType="textNoSuggestions"
                    style="@style/input_item_content" />
        </LinearLayout>
      </LinearLayout>
      <LinearLayout style="@style/miui_wifi_item">
        <CheckBox android:textSize="14.0sp"
                  android:id="@id/shared"
                  android:checked="true"
                  android:text="@string/wifi_shared"
                  style="@style/wifi_checkbox_item_content" />
      </LinearLayout>
      <LinearLayout android:id="@id/hidden_settings_field"
                    android:visibility="gone"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    style="@style/wifi_item">
        <miuix.appcompat.widget.Spinner android:id="@id/hidden_settings_title"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:text="@string/wifi_hidden_network"
                              style="@style/wifi_item_label" />
        <miuix.appcompat.widget.Spinner android:entries="@array/wifi_hidden_entries"
                              android:id="@id/hidden_settings"
                              android:layout_width="fill_parent"
                              android:layout_height="wrap_content"
                              android:prompt="@string/wifi_hidden_network"
                              style="@style/wifi_spinner" />
        <TextView android:textAppearance="?android:attr/textAppearanceSmall"
                  android:id="@id/hidden_settings_warning"
                  android:padding="8.0dp"
                  android:visibility="gone"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="@string/wifi_hidden_network_warning" />
      </LinearLayout>
    </LinearLayout>
  </LinearLayout>
</ScrollView>