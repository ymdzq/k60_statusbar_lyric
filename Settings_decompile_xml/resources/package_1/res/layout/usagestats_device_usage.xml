<?xml version='1.0' encoding='utf-8' ?>
<FrameLayout android:background="@color/usage_state_main_bg"
             android:layout_width="fill_parent"
             android:layout_height="wrap_content" xmlns:android="http://schemas.android.com/apk/res/android">
  <LinearLayout android:orientation="vertical"
                android:background="@drawable/background_round_rect"
                android:paddingTop="@dimen/usage_state_tip_margin"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/usage_state_margin"
                android:layout_marginEnd="@dimen/usage_state_margin">
    <com.android.settings.usagestats.widget.NewBarChartView android:id="@id/device_usage_bar_view"
                          android:layout_width="fill_parent"
                          android:layout_height="@dimen/usage_state_device_bar_height"
                          android:layout_marginBottom="@dimen/usage_state_app_usage_bar_view_margin_bottom"
                          android:layout_marginStart="20.73dp"
                          android:layout_marginEnd="22.55dp" />
    <LinearLayout android:orientation="vertical"
                  android:id="@id/ll_app_notification_list_container"
                  android:visibility="gone"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="@dimen/usage_state_notification_list_margin_top"
                  android:layout_marginStart="20.63dp"
                  android:layout_marginEnd="21.82dp" />
  </LinearLayout>
</FrameLayout>