<?xml version='1.0' encoding='utf-8' ?>
<LinearLayout android:orientation="vertical"
              android:clipChildren="true"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
  <com.android.settings.device.MiuiVersionCard android:id="@id/miui_version_card_view"
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/my_device_os_logo_area_height" />
  <LinearLayout android:orientation="vertical"
                android:id="@id/device_basic_layout"
                android:background="@drawable/new_device_card_back_ground"
                android:clipChildren="true"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/card_margin_edge"
                android:layout_marginEnd="@dimen/card_margin_edge">
    <com.android.settings.device.MiuiDeviceNameCard android:id="@id/device_name_card_view"
                          android:paddingTop="10.0dp"
                          android:layout_width="fill_parent"
                          android:layout_height="wrap_content" />
    <com.android.settings.device.MiuiMemoryCard android:id="@id/device_memory_card_view"
                          android:layout_width="fill_parent"
                          android:layout_height="wrap_content" />
    <com.android.settings.device.MiuiGuaranteeCard android:id="@id/device_guarantee_card_view"
                          android:layout_width="fill_parent"
                          android:layout_height="wrap_content" />
    <com.android.settings.device.MiuiDeviceBenefitsCard android:id="@id/device_mall_card_view"
                          android:paddingBottom="10.0dp"
                          android:layout_width="fill_parent"
                          android:layout_height="wrap_content" />
  </LinearLayout>
</LinearLayout>