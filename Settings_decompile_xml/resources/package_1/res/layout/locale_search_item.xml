<?xml version='1.0' encoding='utf-8' ?>
<RelativeLayout android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:background="?attr/preferenceItemBackground"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/locale_search_item_start_padding"
                android:paddingEnd="@dimen/locale_search_item_end_padding" xmlns:android="http://schemas.android.com/apk/res/android">
  <RadioButton android:textSize="18.18sp"
               android:id="@id/locale"
               android:focusable="false"
               android:clickable="false"
               android:duplicateParentState="true"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:button="@null"
               android:layout_centerVertical="true"
               android:layout_marginEnd="2.0dp"
               android:layout_alignParentStart="true" />
  <ImageView android:id="@id/item_icon"
             android:focusable="false"
             android:clickable="false"
             android:layout_width="@dimen/locale_search_item_button_width"
             android:layout_height="@dimen/locale_search_item_button_height"
             android:scaleType="center"
             android:layout_centerVertical="true"
             android:layout_alignParentEnd="true" />
</RelativeLayout>