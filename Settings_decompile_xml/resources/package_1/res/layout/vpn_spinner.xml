<?xml version='1.0' encoding='utf-8' ?>
<LinearLayout android:orientation="horizontal"
              android:id="@id/spinner_layout"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:weightSum="3.0"
              android:minHeight="@dimen/list_item_height"
              android:paddingStart="@dimen/state_edit_left_right_padding"
              android:paddingEnd="@dimen/state_edit_left_right_padding"
              android:layout_marginStart="@dimen/state_edit_left_right_margin"
              android:layout_marginEnd="@dimen/state_edit_left_right_margin" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
  <TextView android:textAppearance="@style/Miuix.AppCompat.TextAppearance.PreferenceList"
            android:layout_gravity="center|start"
            android:id="@id/spinner_title"
            android:layout_width="0.0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:textAlignment="viewStart" />
  <miuix.appcompat.widget.Spinner android:layout_gravity="center|end"
                        android:id="@id/right_spinner"
                        android:layout_width="0.0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2.0" />
</LinearLayout>