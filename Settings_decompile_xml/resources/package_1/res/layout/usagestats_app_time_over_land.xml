<?xml version='1.0' encoding='utf-8' ?>
<LinearLayout android:gravity="center_horizontal"
              android:orientation="vertical"
              android:background="@android:color/transparent"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android">
  <ImageView android:id="@id/iv_app_icon"
             android:layout_width="48.73dp"
             android:layout_height="48.73dp"
             android:layout_marginTop="60.0dp"
             android:scaleType="centerCrop" />
  <TextView android:textSize="13.82sp"
            android:textColor="@color/usage_stats_time_over_text"
            android:id="@id/tv_app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5.82dp" />
  <TextView android:textSize="17.45sp"
            android:textColor="@color/usage_stats_time_over_text"
            android:gravity="center"
            android:id="@id/tv_limit_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20.0dp" />
  <TextView android:textSize="17.45sp"
            android:textColor="@color/usage_stats_time_over_text"
            android:gravity="center"
            android:id="@id/tv_limit_summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/usage_app_over_summary"
            android:maxLines="2" />
  <View android:background="@color/usage_stats_transparent"
        android:layout_width="fill_parent"
        android:layout_height="0.0dp"
        android:layout_weight="1.0" />
  <LinearLayout android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30.0dp">
    <TextView android:textSize="13.82sp"
              android:textColor="@color/usage_stats_time_over_text"
              android:gravity="center"
              android:id="@id/tv_set_time"
              android:background="@drawable/usagestats_app_limit_bg"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/usage_app_set_limit_time" />
    <TextView android:textSize="13.82sp"
              android:textColor="@color/usage_stats_time_over_text"
              android:gravity="center"
              android:id="@id/tv_get_it"
              android:background="@drawable/usagestats_app_limit_bg2"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/usage_app_get_it"
              android:layout_marginStart="10.0dp" />
  </LinearLayout>
</LinearLayout>