<?xml version='1.0' encoding='utf-8' ?>
<LinearLayout android:layout_gravity="center"
              android:orientation="horizontal"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content" xmlns:android="http://schemas.android.com/apk/res/android">
  <RelativeLayout android:layout_gravity="center"
                  android:orientation="vertical"
                  android:layout_width="0.0dp"
                  android:layout_height="wrap_content"
                  android:layout_weight="1.0"
                  android:layout_marginStart="5.0dp"
                  android:layout_marginEnd="4.0dp">
    <ImageView android:id="@id/notification_icon"
               android:layout_width="24.0dp"
               android:layout_height="24.0dp"
               android:layout_marginTop="2.67dp" />
    <TextView android:textSize="16.0sp"
              android:textColor="#ff000000"
              android:ellipsize="end"
              android:id="@id/notification_text"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:maxLines="1"
              android:fontFamily="mipro-medium"
              android:textDirection="locale"
              android:textAlignment="viewStart"
              android:layout_marginStart="8.33dp"
              android:layout_toEndOf="@id/notification_icon" />
    <TextView android:textSize="14.5sp"
              android:textColor="#99000000"
              android:ellipsize="end"
              android:id="@id/notification_summary"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="3.33dp"
              android:maxLines="1"
              android:layout_below="@id/notification_text"
              android:textDirection="locale"
              android:textAlignment="viewStart"
              android:layout_marginStart="8.33dp"
              android:layout_toEndOf="@id/notification_icon" />
  </RelativeLayout>
  <TextView android:textSize="14.0dp"
            android:textColor="#0d84ff"
            android:layout_gravity="center"
            android:id="@id/notification_button"
            android:background="@drawable/shape_notification_button_normal"
            android:paddingTop="4.0dp"
            android:paddingBottom="4.0dp"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:clickable="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="28.0dp"
            android:textAllCaps="true"
            android:fontFamily="mipro-medium"
            android:paddingStart="13.0dp"
            android:paddingEnd="13.0dp" />
  <ImageView android:layout_gravity="center"
             android:id="@id/large_icon"
             android:visibility="gone"
             android:layout_width="36.67dp"
             android:layout_height="36.67dp" />
</LinearLayout>