<?xml version='1.0' encoding='utf-8' ?>
<ScrollView android:layout_width="fill_parent"
            android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android">
  <LinearLayout android:gravity="center_horizontal"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:paddingStart="@dimen/bluetooth_pair_padding"
                android:paddingEnd="@dimen/bluetooth_pair_padding">
    <TextView android:textAppearance="@android:style/TextAppearance.DeviceDefault.Body1"
              android:textSize="13.82sp"
              android:gravity="center_vertical"
              android:id="@id/pairing_caption"
              android:visibility="gone"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/bluetooth_pairing_key_msg"
              android:layout_marginStart="@dimen/bluetooth_dialog_padding"
              android:layout_marginEnd="@dimen/bluetooth_dialog_padding" />
    <TextView android:textSize="@dimen/bt_pairing_pin_size"
              android:gravity="center_vertical"
              android:id="@id/pairing_subhead"
              android:visibility="gone"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginBottom="@dimen/bluetooth_dialog_padding_bottom"
              android:fontFamily="mipro-semibold"
              android:layout_marginStart="@dimen/bluetooth_dialog_padding"
              android:layout_marginEnd="@dimen/bluetooth_dialog_padding" />
    <TextView android:textAppearance="@android:style/TextAppearance.DeviceDefault.Subhead"
              android:gravity="center_vertical"
              android:id="@id/pairing_code_message"
              android:visibility="gone"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginBottom="@dimen/bluetooth_dialog_padding"
              android:text="@string/bluetooth_enter_passkey_msg"
              android:layout_marginStart="@dimen/bluetooth_dialog_padding"
              android:layout_marginEnd="@dimen/bluetooth_dialog_padding" />
    <TextView android:textAppearance="@android:style/TextAppearance.DeviceDefault.Body1"
              android:gravity="center_vertical"
              android:id="@id/pairing_group_message"
              android:visibility="gone"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginBottom="@dimen/bluetooth_dialog_padding"
              android:text="@string/bluetooth_paring_group_msg"
              android:layout_marginStart="@dimen/bluetooth_dialog_padding"
              android:layout_marginEnd="@dimen/bluetooth_dialog_padding" />
    <CheckBox android:textSize="16.7sp"
              android:id="@id/phonebook_sharing_message_confirm_pin"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:minHeight="@dimen/min_tap_target_size"
              android:fontFamily="mipro-regular"
              android:paddingStart="7.27dp"
              android:layout_marginStart="@dimen/bluetooth_dialog_padding"
              android:layout_marginEnd="@dimen/bluetooth_dialog_padding"
              style="@style/Widget.CompoundButton.CheckBox" />
    <Button android:ellipsize="middle"
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@id/add_to_blackfile_button"
            android:visibility="gone"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/bluetooth_pair_padding"
            style="?android:attr/buttonBarButtonStyle" />
    <Button android:gravity="center"
            android:layout_gravity="center"
            android:id="@id/pairing_decline_button"
            android:visibility="gone"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10.5dp"
            style="?android:attr/buttonBarButtonStyle" />
    <Button android:gravity="center"
            android:layout_gravity="center"
            android:id="@id/pairing_accept_button"
            android:visibility="gone"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10.5dp"
            style="?attr/buttonBarDefaultButtonStyle" />
  </LinearLayout>
</ScrollView>