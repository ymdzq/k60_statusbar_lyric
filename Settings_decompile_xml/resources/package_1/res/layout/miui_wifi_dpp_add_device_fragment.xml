<?xml version='1.0' encoding='utf-8' ?>
<com.google.android.setupdesign.GlifLayout android:icon="@drawable/ic_devices_other_32dp"
                      android:layout_width="fill_parent"
                      android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android">
  <LinearLayout android:gravity="center_horizontal"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
    <TextView android:id="@android:id/summary"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textAlignment="center"
              android:layout_marginStart="24.0dp"
              android:layout_marginEnd="24.0dp"
              android:accessibilityLiveRegion="polite" />
    <LinearLayout android:gravity="center"
                  android:orientation="vertical"
                  android:layout_width="fill_parent"
                  android:layout_height="fill_parent">
      <ImageView android:id="@id/wifi_ap_picture_view"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:src="@drawable/wifi_dpp_success"
                 android:scaleType="fitCenter" />
      <Button android:id="@id/choose_different_network"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="8.0dp"
              android:text="@string/wifi_dpp_choose_different_network"
              android:layout_marginStart="8.0dp"
              android:layout_marginEnd="8.0dp" />
      <Button android:id="@id/share_wifi"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="8.0dp"
              android:text="@string/wifi_dpp_share_wifi"
              android:layout_marginStart="8.0dp"
              android:layout_marginEnd="8.0dp" />
    </LinearLayout>
  </LinearLayout>
</com.google.android.setupdesign.GlifLayout>