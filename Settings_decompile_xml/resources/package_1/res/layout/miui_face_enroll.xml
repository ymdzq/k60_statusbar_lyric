<?xml version='1.0' encoding='utf-8' ?>
<ScrollView android:background="@android:color/black"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:fillViewport="true" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:settings="http://schemas.android.com/apk/res-auto">
  <LinearLayout android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
    <LinearLayout android:id="@id/back_image"
                  android:layout_width="@dimen/miui_face_enroll_back_linear_width"
                  android:layout_height="@dimen/miui_face_enroll_back_linear_height">
      <ImageView android:layout_gravity="center_vertical"
                 android:layout_width="@dimen/miui_face_enroll_back_image_width"
                 android:layout_height="@dimen/miui_face_enroll_back_image_height"
                 android:src="@drawable/face_input_back"
                 android:scaleType="center"
                 android:layout_marginStart="@dimen/miui_face_enroll_back_image_start" />
    </LinearLayout>
    <FrameLayout android:layout_width="fill_parent"
                 android:layout_height="wrap_content"
                 android:layout_below="@id/back_image">
      <FrameLayout android:layout_gravity="center_horizontal"
                   android:id="@id/miui_face_input_camera_preview_framelayout"
                   android:layout_width="@dimen/miui_face_enroll_camera_preview_width"
                   android:layout_height="@dimen/miui_face_enroll_camera_preview_height"
                   android:layout_marginTop="@dimen/miui_face_enroll_camera_preview_top">
        <SurfaceView android:layout_gravity="center"
                     android:id="@id/miui_face_input_camera_preview"
                     android:layout_width="@dimen/miui_face_enroll_camera_preview_width"
                     android:layout_height="@dimen/miui_face_enroll_camera_preview_height"
                     android:alpha="0.0" />
        <com.android.settings.faceunlock.CameraPreviewCoverdView android:id="@id/miui_face_input_camera_preview_second_coverd"
                              android:layout_width="fill_parent"
                              android:layout_height="fill_parent" />
        <ImageView android:layout_gravity="center_horizontal"
                   android:id="@id/miui_face_input_suggestion_video_image"
                   android:layout_width="@dimen/miui_face_enroll_suggestion_video_width"
                   android:layout_height="@dimen/miui_face_enroll_suggestion_video_height"
                   android:layout_marginTop="@dimen/miui_face_enroll_suggestion_video_top" />
        <TextureView android:layout_gravity="center_horizontal"
                     android:id="@id/miui_face_input_suggestion_video"
                     android:layout_width="@dimen/miui_face_enroll_suggestion_video_width"
                     android:layout_height="@dimen/miui_face_enroll_suggestion_video_height"
                     android:layout_marginTop="@dimen/miui_face_enroll_suggestion_video_top" />
        <com.android.settings.faceunlock.FaceDetectView android:layout_gravity="center_horizontal"
                              android:id="@id/miui_face_input_detect"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:alpha="0.0" />
        <com.android.settings.faceunlock.FaceInputProgressView android:layout_gravity="center_horizontal"
                              android:id="@id/miui_face_input_progress_circle"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:alpha="0.0" />
        <com.android.settings.faceunlock.FaceInputGridView android:layout_gravity="center_horizontal"
                              android:id="@id/miui_face_input_grid"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content" />
        <TextureView android:layout_gravity="center_horizontal"
                     android:id="@id/miui_face_input_success_video"
                     android:layout_width="@dimen/miui_face_enroll_success_video_width"
                     android:layout_height="@dimen/miui_face_enroll_success_video_height"
                     android:layout_marginTop="@dimen/miui_face_enroll_success_video_top" />
        <com.android.settings.faceunlock.FaceEnrollSuccessView android:layout_gravity="center_horizontal"
                              android:id="@id/miui_face_input_success_image"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content" />
      </FrameLayout>
      <RelativeLayout android:layout_width="fill_parent"
                      android:layout_height="wrap_content">
        <TextView android:textSize="@dimen/miui_face_enroll_title_text_size"
                  android:textColor="@color/miui_face_input_normal_text_color"
                  android:gravity="center"
                  android:id="@id/miui_face_input_title"
                  android:layout_width="fill_parent"
                  android:layout_height="@dimen/miui_face_enroll_title_height"
                  android:layout_marginTop="@dimen/miui_face_enroll_title_top"
                  android:text="@string/face_data_input_title"
                  android:maxLines="3"
                  android:fontFamily="mipro-regular"
                  android:layout_marginStart="@dimen/miui_face_enroll_back_image_start"
                  android:layout_marginEnd="@dimen/miui_face_enroll_back_image_start"
                  android:autoSizeTextType="uniform"
                  android:autoSizeStepGranularity="2.0sp"
                  android:autoSizeMinTextSize="@dimen/miui_face_enroll_title_text_mintextsize"
                  android:autoSizeMaxTextSize="@dimen/miui_face_enroll_title_text_maxtextsize" />
        <com.android.settings.faceunlock.AlignTextView android:textColor="@color/miui_face_input_first_suggestion_color"
                              android:gravity="center"
                              android:id="@id/miui_face_input_first_suggestion"
                              android:layout_width="fill_parent"
                              android:layout_height="@dimen/miui_face_input_first_suggestion_height"
                              android:layout_marginTop="@dimen/miui_face_enroll_title_top"
                              android:text="@string/face_data_suggesstion_second"
                              android:layout_below="@id/miui_face_input_title"
                              android:fontFamily="mipro-regular"
                              android:layout_marginStart="@dimen/miui_face_enroll_first_suggestion_horizontal"
                              android:layout_marginEnd="@dimen/miui_face_enroll_first_suggestion_horizontal"
                              android:autoSizeTextType="uniform"
                              android:autoSizeStepGranularity="1.0sp"
                              android:autoSizeMinTextSize="@dimen/miui_face_input_first_suggestion_mintextsize"
                              android:autoSizeMaxTextSize="@dimen/miui_face_input_first_suggestion_maxtextsize" />
        <TextView android:textSize="@dimen/miui_face_enroll_success_title_text_size"
                  android:textColor="@color/miui_face_input_normal_text_color"
                  android:id="@id/miui_face_input_success_title"
                  android:visibility="invisible"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="@dimen/miui_face_enroll_success_title_top"
                  android:text="@string/face_data_input_ok_title"
                  android:layout_centerHorizontal="true"
                  android:fontFamily="mipro-regular"
                  android:fallbackLineSpacing="false" />
        <com.android.settings.faceunlock.AlignTextView android:textSize="@dimen/miui_face_enroll_success_message_text_size"
                              android:textColor="@color/miui_face_input_second_suggestion_color"
                              android:gravity="center"
                              android:id="@id/miui_face_input_success_message"
                              android:visibility="invisible"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:layout_marginTop="@dimen/miui_face_enroll_success_message_top"
                              android:text="@string/miui_face_enroll_success"
                              android:layout_centerHorizontal="true"
                              android:fontFamily="mipro-regular" />
        <TextView android:textSize="@dimen/miui_face_enroll_name_text_size"
                  android:textColor="@color/miui_face_input_second_suggestion_color"
                  android:id="@id/multi_face_name_text"
                  android:visibility="invisible"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="@dimen/miui_face_enroll_name_text_top"
                  android:text="@string/multi_face_input_success_name_title"
                  android:fontFamily="mipro-regular"
                  android:layout_marginStart="@dimen/miui_face_enroll_name_text_left" />
        <miuix.androidbasewidget.widget.ClearableEditText android:textSize="@dimen/miui_face_enroll_name_edittext_text_size"
                              android:textColor="@color/miui_face_input_normal_text_color"
                              android:textColorHint="@color/miui_face_input_name_edittext_hint_text_color"
                              android:layout_gravity="center|start"
                              android:id="@id/multi_face_name_edit"
                              android:visibility="invisible"
                              android:layout_width="fill_parent"
                              android:layout_height="wrap_content"
                              android:layout_marginTop="@dimen/miui_face_enroll_name_edittext_top"
                              android:inputType="textNoSuggestions"
                              android:fontFamily="mipro-regular"
                              android:layout_marginStart="@dimen/miui_face_enroll_button_horizontal"
                              android:layout_marginEnd="@dimen/miui_face_enroll_button_horizontal"
                              settings:drawableEndCompat="?attr/clearableEditTextIcon"
                              style="@style/Widget.EditText.Dark" />
      </RelativeLayout>
    </FrameLayout>
    <View android:layout_width="fill_parent"
          android:layout_height="0.0dp"
          android:layout_weight="1.0" />
    <Button android:textSize="@dimen/miui_face_enroll_button_text_size"
            android:textColor="@android:color/white"
            android:id="@id/miui_face_input_nextorsuccess_button"
            android:background="@drawable/btn_bg_warn_dark"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/miui_face_enroll_next_button_bottom"
            android:text="@string/face_data_introduction_add"
            android:fontFamily="mipro-regular"
            android:layout_marginStart="@dimen/miui_face_enroll_button_horizontal"
            android:layout_marginEnd="@dimen/miui_face_enroll_button_horizontal"
            style="@style/Widget.Button.Primary" />
  </LinearLayout>
</ScrollView>