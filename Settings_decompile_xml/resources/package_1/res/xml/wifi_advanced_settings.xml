<?xml version='1.0' encoding='utf-8' ?>
<PreferenceScreen android:title="@string/wifi_advanced_titlebar" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:settings="http://schemas.android.com/apk/res-auto">
  <PreferenceCategory android:title="@string/wifi_settings_category" />
  <com.android.settingslib.miuisettings.preference.CheckBoxPreference android:persistent="false"
                        android:title="@string/wifi_scan_always_available"
                        android:key="wifi_scan_always_available"
                        android:summary="@string/wifi_scan_always_available_summary" />
  <com.android.settingslib.miuisettings.preference.CheckBoxPreference android:title="@string/wifi_verbose_logging"
                        android:key="wifi_verbose_logging" />
  <com.android.settingslib.miuisettings.preference.miuix.DropDownPreference android:persistent="false"
                        android:title="@string/wifi_setting_frequency_band_title"
                        android:key="frequency_band"
                        android:summary="@string/wifi_setting_frequency_band_summary"
                        settings:entries="@array/wifi_frequency_band_entries"
                        settings:entryValues="@array/wifi_frequency_band_values" />
  <com.android.settingslib.miuisettings.preference.Preference android:persistent="false"
                        android:title="@string/wifi_install_credentials"
                        android:key="install_credentials" />
  <com.android.settingslib.miuisettings.preference.miuix.DropDownPreference android:persistent="false"
                        android:title="@string/select_ssid_type_title"
                        android:key="select_ssid_type"
                        settings:entries="@array/wifi_ssid_type_entries"
                        settings:entryValues="@array/wifi_ssid_type_values" />
  <com.android.settingslib.miuisettings.preference.miuix.DropDownPreference android:persistent="false"
                        android:title="@string/gsm_to_wifi_connect_type_title"
                        android:key="connect_type"
                        settings:entries="@array/wifi_connect_type_entries"
                        settings:entryValues="@array/wifi_connect_type_values" />
  <com.android.settingslib.miuisettings.preference.CheckBoxPreference android:persistent="false"
                        android:title="@string/wifi_dialog_remind_type_title"
                        android:key="dialog_remind_type" />
  <com.android.settingslib.miuisettings.preference.CheckBoxPreference android:persistent="false"
                        android:title="@string/wifi_priority_type_title"
                        android:key="priority_type"
                        android:summary="@string/wifi_priority_type_summary" />
  <com.android.settingslib.miuisettings.preference.Preference android:persistent="false"
                        android:title="@string/wifi_priority_settings_title"
                        android:key="priority_settings"
                        android:summary="@string/wifi_priority_settings_summary"
                        android:dependency="priority_type" />
  <com.android.settingslib.miuisettings.preference.Preference android:key="mac_address"
                        style="?attr/preferenceInformationStyle" />
  <com.android.settingslib.miuisettings.preference.Preference android:title="@string/wifi_advanced_ip_address_title"
                        android:key="current_ip_address"
                        style="?attr/preferenceInformationStyle" />
  <com.android.settingslib.miuisettings.preference.Preference android:persistent="false"
                        android:title="@string/wifi_menu_p2p"
                        android:key="wifi_direct" />
  <PreferenceCategory android:title="@string/wps_category">
    <com.android.settingslib.miuisettings.preference.Preference android:persistent="false"
                          android:title="@string/wps_connect_title"
                          android:key="wps_connect"
                          android:summary="@string/wps_connect_summary"
                          android:fragment="com.android.settings.wifi.WpsFragment" />
    <com.android.settingslib.miuisettings.preference.Preference android:persistent="false"
                          android:title="@string/wifi_menu_wps_pin"
                          android:key="wps_pin"
                          android:summary="@string/wps_connect_summary"
                          android:fragment="com.android.settings.wifi.WpsFragment" />
  </PreferenceCategory>
</PreferenceScreen>