<?xml version='1.0' encoding='utf-8' ?>
<PreferenceScreen android:title="@string/screen_pinning_title" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:settings="http://schemas.android.com/apk/res-auto">
  <com.android.settingslib.miuisettings.preference.CheckBoxPreference android:title="@string/screen_pinning_title"
                        android:key="use_app_pinning"
                        android:summary="@string/screen_pinning_summary" />
  <com.android.settingslib.miuisettings.preference.SwitchPreference android:title="@string/screen_pinning_unlock_none"
                        android:key="use_screen_lock"
                        android:dependency="use_app_pinning"
                        settings:allowDividerAbove="true" />
  <com.android.settingslib.widget.FooterPreference android:title="@string/screen_pinning_description"
                        android:key="screen_pinning_settings_screen_footer"
                        settings:searchable="false" />
</PreferenceScreen>