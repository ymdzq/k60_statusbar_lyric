<?xml version='1.0' encoding='utf-8' ?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
  <PreferenceCategory android:title="@string/fingerprint_first_open_screen_password_tittle"
                      android:key="fingerprint_and_faceunlock">
    <PreferenceScreen android:title="@string/add_fingerprint_text"
                      android:key="add_or_manage_fingerprint" />
    <PreferenceScreen android:title="@string/add_facerecoginition_text"
                      android:key="add_or_manage_face_recoginition" />
  </PreferenceCategory>
  <PreferenceCategory android:title="@string/security_password_category_name"
                      android:key="security_second_category">
    <PreferenceScreen android:persistent="false"
                      android:title="@string/secure_keyguard_business_title"
                      android:key="unlock_set_or_change"
                      android:summary="@string/password_turned_off_text" />
    <PreferenceScreen android:persistent="false"
                      android:title="@string/privacy_password_title"
                      android:key="privacy_password"
                      android:summary="@string/password_turned_off_text" />
  </PreferenceCategory>
  <PreferenceCategory android:title="@string/security_keyguard_category_name"
                      android:key="security_category">
    <com.android.settingslib.miuisettings.preference.ValuePreference android:persistent="false"
                          android:title="@string/lockscreen_magazine"
                          android:key="lockscreen_magazine"
                          android:summary="@string/lockscreen_magazine_summary" />
    <com.android.settings.KeyguardTimeoutListPreference android:persistent="false"
                          android:entries="@array/screen_timeout_entries"
                          android:title="@string/screen_timeout"
                          android:key="screen_timeout"
                          android:entryValues="@array/screen_timeout_values" />
    <CheckBoxPreference android:persistent="false"
                        android:title="@string/lockpattern_settings_enable_power_button_instantly_locks"
                        android:key="power_button_instantly_locks" />
    <CheckBoxPreference android:persistent="false"
                        android:title="@string/wakeup_for_keyguard_notification_title"
                        android:key="wakeup_for_keyguard_notification" />
    <ListPreference android:persistent="false"
                    android:entries="@array/aod_notification_status_entries"
                    android:title="@string/aod_notification_style"
                    android:key="keyguard_notification_status"
                    android:entryValues="@array/keyguard_notification_status_values" />
    <CheckBoxPreference android:persistent="true"
                        android:title="@string/pref_volume_launch_camera_title"
                        android:key="volume_launch_camera"
                        android:summary="@string/pref_volume_launch_camera_summary" />
    <CheckBoxPreference android:persistent="false"
                        android:title="@string/pref_show_lunar_calendar_title"
                        android:key="show_lunar_calendar" />
    <PreferenceScreen android:title="@string/keyguard_advance_setting_title"
                      android:key="keyguard_advance_setting" />
  </PreferenceCategory>
  <PreferenceCategory android:title="@string/keyguard_security_setting_others"
                      android:key="keyguard_security_setting_others">
    <PreferenceScreen android:title="@string/keyguard_security_setting_privacy_policy"
                      android:key="keyguard_privacy_policy" />
  </PreferenceCategory>
</PreferenceScreen>