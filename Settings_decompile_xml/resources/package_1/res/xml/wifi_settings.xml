<?xml version='1.0' encoding='utf-8' ?>
<PreferenceScreen android:title="@string/wifi_settings" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:settings="http://schemas.android.com/apk/res-auto">
  <com.android.settings.wifi.LinkablePreference android:key="wifi_status_message" />
  <com.android.settings.widget.CustomCheckBoxPreference android:title="@string/wifi_enable"
                        android:key="wifi_enable"
                        android:order="1" />
  <com.android.settingslib.miuisettings.preference.Preference android:persistent="false"
                        android:title="@string/network_acceleration"
                        android:key="network_acceleration"
                        android:order="2">
    <intent android:targetPackage="com.android.settings"
            android:targetClass="com.android.settings.wifi.linkturbo.WifiLinkTurboSettings" />
  </com.android.settingslib.miuisettings.preference.Preference>
  <PreferenceCategory android:key="connected_access_point"
                      android:order="3" />
  <miuix.preference.PreferenceCategory android:title="@string/wifi_saved_access_point"
                        android:key="saved_access_point"
                        android:order="4" />
  <PreferenceCategory android:key="access_points"
                      android:order="5" />
  <PreferenceCategory android:title="@string/more_settings_button"
                      android:key="wifi_settings"
                      android:order="100">
    <com.android.settingslib.miuisettings.preference.Preference android:persistent="false"
                          android:title="@string/advanced_settings"
                          android:fragment="com.android.settings.wifi.MiuiConfigureWifiSettings" />
    <com.android.settingslib.miuisettings.preference.Preference android:persistent="false"
                          android:visibility="invisible"
                          android:title="@string/connect_help"
                          android:key="wifi_connect_help">
      <intent android:targetPackage="com.android.settings.bluetooth"
              android:action="com.android.settings.bluetooth.MiuiHeadsetActivityPlugin"
              android:targetClass="com.android.settings.bluetooth.MiuiHeadsetActivityPlugin" />
    </com.android.settingslib.miuisettings.preference.Preference>
  </PreferenceCategory>
  <com.android.settingslib.widget.LayoutPreference android:layout="@layout/resetting_internet"
                        android:title="@string/resetting_internet_text"
                        android:selectable="false"
                        android:key="resetting_your_internet"
                        settings:allowDividerBelow="true" />
  <com.android.settingslib.widget.LayoutPreference android:layout="@layout/airplane_mode_message_preference"
                        android:title="@string/condition_airplane_title"
                        android:selectable="false"
                        android:key="airplane_mode_message"
                        settings:allowDividerBelow="true" />
  <PreferenceCategory android:layout="@layout/preference_category_no_label"
                      android:title="@string/summary_placeholder"
                      android:key="provider_model_mobile_network"
                      settings:controller="com.android.settings.network.NetworkMobileProviderController" />
  <PreferenceCategory android:layout="@layout/preference_category_no_label"
                      android:key="first_access_points" />
  <com.android.settingslib.miuisettings.preference.Preference android:title="@string/network_and_internet_preferences_title"
                        android:key="configure_wifi_settings"
                        android:summary="@string/network_and_internet_preferences_summary"
                        android:fragment="com.android.settings.wifi.ConfigureWifiSettings"
                        settings:allowDividerAbove="true" />
  <com.android.settingslib.miuisettings.preference.Preference android:title="@string/wifi_saved_access_points_label"
                        android:key="saved_networks"
                        android:fragment="com.android.settings.wifi.savedaccesspoints2.SavedAccessPointsWifiSettings2" />
</PreferenceScreen>